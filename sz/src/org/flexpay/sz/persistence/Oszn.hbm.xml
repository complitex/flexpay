<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.sz.persistence">

	<class name="Oszn" table="oszn_tbl">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="district" class="org.flexpay.ab.persistence.District" column="district_id" not-null="true" />
		<property name="description" not-null="true" />
	</class>
	
	<query name="Oszn.listOszn">
		from Oszn
	</query>

</hibernate-mapping>