<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="apartments" namespace="/dicts" extends="common">
		<action name="list_apartments" class="listApartments">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">APARTMENT_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.apartment.list</result>
		</action>

		<action name="apartmentEdit" class="apartmentEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">APARTMENT_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.apartment.edit</result>
			<result name="redirectSuccess" type="redirect-action">list_apartments</result>
		</action>

		<action name="apartmentsDelete" class="apartmentsDeleteAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">APARTMENT_CHANGE</param>
			</interceptor-ref>
			<result name="redirectSuccess" type="redirect-action">list_apartments</result>
		</action>

		<action name="apartmentRegistrationsAction" class="apartmentRegistrationsAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">APARTMENT_READ</param>
			</interceptor-ref>
			<result name="success" type="tiles">ab.apartment.registrations</result>
		</action>

		<action name="apartmentRegistrationsHistoryAction" class="apartmentRegistrationsAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">APARTMENT_READ</param>
			</interceptor-ref>
			<result name="success" type="tiles">ab.apartment.registrations_history</result>
		</action>
	</package>


</struts>
