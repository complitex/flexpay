<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="persons" namespace="/dicts" extends="common">

		<action name="personsList" class="personsListAction">
			<result type="tiles">ab.person.list</result>
		</action>

		<action name="personView" class="personViewAction">
			<result type="tiles">ab.person.view</result>
		</action>

        <action name="personDelete" class="personDeleteAction">
			<result name="redirectSuccess" type="redirect-action">personsList</result>
		</action>

		<action name="personEdit" class="personEditAction">
			<result name="input" type="tiles">ab.person.edit</result>
			<result type="redirect-action">
				<param name="actionName">personView</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">personsList</param>
			</result>
		</action>

		<action name="personEditFIO" class="personSaveFIOAction">
			<result name="redirectError" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
		</action>

		<action name="setPersonRegistration" class="setPersonRegistrationAction">
			<result name="redirectError" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
                <param name="countryFilter">${countryFilter}</param>
                <param name="regionFilter">${regionFilter}</param>
                <param name="townFilter">${townFilter}</param>
                <param name="streetFilter">${streetFilter}</param>
                <param name="buildingFilter">${buildingFilter}</param>
                <param name="apartmentFilter">${apartmentFilter}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
		</action>

	</package>

</struts>
