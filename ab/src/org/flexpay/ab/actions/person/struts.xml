<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="persons" namespace="/dicts" extends="common">

		<action name="personsList" class="personsListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">PERSON_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.person.list</result>
		</action>

		<action name="personView" class="personViewAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">PERSON_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.person.view</result>
		</action>

		<action name="personEdit" class="personEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">PERSON_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.person.edit</result>
			<result type="redirect-action">
				<param name="actionName">personView</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">personsList</param>
			</result>
		</action>

		<action name="personEditFIO" class="personSaveFIOAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">PERSON_CHANGE</param>
			</interceptor-ref>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
		</action>

		<action name="setPersonRegistration" class="setRegistrationAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">PERSON_CHANGE</param>
			</interceptor-ref>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
				<param name="countryFilter.selectedId">${countryFilter.selectedId}</param>
				<param name="regionFilter.selectedId">${regionFilter.selectedId}</param>
				<param name="townFilter.selectedId">${townFilter.selectedId}</param>
				<param name="streetFilter.selectedId">${streetFilter.selectedId}</param>
				<param name="buildingsFilter.selectedId">${buildingsFilter.selectedId}</param>
				<param name="apartmentFilter.selectedId">${apartmentFilter.selectedId}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">personEdit</param>
				<param name="parse">true</param>
				<param name="person.id">${person.id}</param>
			</result>
		</action>

	</package>

</struts>
