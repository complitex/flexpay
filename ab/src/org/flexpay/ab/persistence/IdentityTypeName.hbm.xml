<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.ab.persistence">
    <class name="IdentityTypeName" table="IdentityTypeName" optimistic-lock="version">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <many-to-one name="lang"
                class="org.flexpay.common.persistence.Language"
                column="land_id"
                not-null="true"
            />
          
        <many-to-one name="identityType" 
                    class="IdentityType"
                    column="identity_type_id"
                    not-null="true"
            />
    </class>
</hibernate-mapping>