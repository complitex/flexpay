<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.ab.persistence">
    <class name="IdentityTypeName" table="IdentityTypeName" optimistic-lock="version">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <many-to-one name="lang"
                class="org.flexpay.common.persistence.Language"
                foreign-key="land_id"
            />
        <many-to-one name="identityType"
                    class="IdentityType"
                    foreign-key="identity_name_id"
            />
    </class>
</hibernate-mapping>