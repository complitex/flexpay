<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.ab.persistence">
    <class name="IdentityType" table="IdentityType" optimistic-lock="version">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <set name="identityTypeNames" table="IdentityTypeName" inverse="true">
            <key column="identity_type_id"/>
            <one-to-many class="IdentityTypeName"/>
        </set>

    </class>
</hibernate-mapping>