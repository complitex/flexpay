<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.ab.persistence">
    <class name="Country" table="Country" optimistic-lock="version">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="countryStatus"/>
        <set name="regions" table="Region" cascade="all-delete-orphan" inverse="true">
            <key column="country_id" on-delete="cascade"/>
            <one-to-many class="Region"/>
        </set>
        <map name="countryNames" cascade="all-delete-orphan" table="country_names">
           <key column="countryID"/>
           <composite-map-key class="org.flexpay.common.persistence.AttributeValueKey">
               <key-property name="name"/>
               <key-property name="lang" column="lang"/>
           </composite-map-key>
           <element type="string" column="shortName" length="255"/>
       </map>
    </class>
</hibernate-mapping>