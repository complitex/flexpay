<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="fileParserJob" class="org.flexpay.eirc.process.registry.FileParserJob" scope="prototype"
		  p:parser-ref="spFileParser"
		  p:spFileService-ref="spFileService" />

	<bean name="registryProcessJob" class="org.flexpay.eirc.process.registry.RegistryProcessJob" scope="prototype"
		  p:providerFileProcessor-ref="serviceProviderFileProcessor"
		  p:registryService-ref="spRegistryService" />

	<bean name="generateQuitancePDFJob" class="org.flexpay.eirc.process.quittance.GenerateQuittancePDFJob" scope="prototype"
		  p:quittanceService-ref="quittanceService"
		  p:serviceTypeService-ref="serviceTypeService" />

	<bean name="generateQuitancesJob" class="org.flexpay.eirc.process.quittance.GenerateQuittanceJob" scope="prototype"
		  p:quittanceService="quittanceService" />
</beans>
