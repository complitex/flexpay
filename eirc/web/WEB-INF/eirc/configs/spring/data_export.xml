<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Data sources -->
	<bean id="consumersDataSource"
		  class="org.flexpay.eirc.dao.importexport.RawConsumersDataSource">
		<property name="registryRecordDao" ref="spRegistryRecordDao" />
		<property name="registryRecordDaoExt" ref="spRegistryRecordDaoExt" />
	</bean>

	<!-- Data converters -->
	<bean id="consumerDataConverter"
		  class="org.flexpay.eirc.service.importexport.RawConsumerDataConverter"
		  p:serviceTypeService-ref="serviceTypeService"
		  p:spService-ref="spService" />

	<bean id="typeRegistryEirc"
		  class="org.flexpay.eirc.service.importexport.imp.ClassToTypeRegistry" />

	<bean id="correctionsServiceEirc" parent="correctionsServiceAb"
		  class="org.flexpay.common.service.importexport.imp.CorrectionsServiceImpl">
		<property name="typeRegistry" ref="typeRegistryEirc" />
	</bean>

	<bean id="importErrorServiceEirc" parent="importErrorServiceTemplate">
		<property name="registry" ref="typeRegistryEirc" />
	</bean>

	<!-- Import-Export services -->
	<bean id="importServiceEirc" parent="importServiceAb"
		  class="org.flexpay.eirc.service.importexport.EircImportService">
		<property name="correctionsService" ref="correctionsServiceEirc" />
		<property name="registry" ref="typeRegistryEirc" />
		<property name="typeService" ref="identityTypeService" />
		<property name="consumerDataConverter" ref="consumerDataConverter" />
		<property name="consumerService" ref="consumerService" />
		<property name="recordWorkflowManager" ref="registryRecordWorkflowManager" />
	</bean>

	<bean id="spFilesExchangeHelper"
		  class="org.flexpay.eirc.service.exchange.ExchangeHelper">
		<property name="apartmentService" ref="apartmentService" />
		<property name="buildingService" ref="buildingService" />
		<property name="streetService" ref="streetService" />
		<property name="townService" ref="townService" />
		<property name="personService" ref="personService" />
	</bean>

</beans>
