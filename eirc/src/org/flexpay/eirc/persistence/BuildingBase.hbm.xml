<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- Map all class hierarchy to single table -->
<hibernate-mapping package="org.flexpay.ab.persistence">

	<class name="Building" table="ab_buildings_tbl" discriminator-value="eirc">

		<comment>Buildings</comment>
		<id name="id" column="id">
			<generator class="native" />
		</id>

		<discriminator type="string">
			<column name="building_type" not-null="true">
				<comment>Class hierarchy descriminator, all buildings should have the same value</comment>
			</column>
		</discriminator>

        <property name="status">
            <column name="status" not-null="true">
                <comment>Enabled/Disabled status</comment>
            </column>
        </property>

		<many-to-one name="district" foreign-key="ab_buildings_tbl_district_id" class="District">
			<column name="district_id" not-null="true">
				<comment>District reference</comment>
			</column>
		</many-to-one>

		<set name="buildingses" inverse="true" cascade="all">
			<key column="building_id" not-null="true" />
			<one-to-many class="org.flexpay.ab.persistence.BuildingAddress" />
		</set>
		<set name="buildingStatuses" inverse="true">
			<key column="building_id" not-null="true" />
			<one-to-many class="BuildingStatus" />
		</set>
		<set name="apartments" inverse="true">
			<key column="building_id" not-null="true" />
			<one-to-many class="Apartment" />
		</set>

		<subclass name="org.flexpay.bti.persistence.building.BtiBuilding" discriminator-value="bti">

			<set name="attributes" cascade="all-delete-orphan" inverse="true">
				<key column="building_id" not-null="true" />
				<one-to-many class="org.flexpay.bti.persistence.building.BuildingTempAttribute" />
			</set>

			<subclass name="org.flexpay.eirc.persistence.ServedBuilding" discriminator-value="ab">
				<many-to-one name="serviceOrganization"
							 foreign-key="FK_eirc_building_service_organization"
							 class="org.flexpay.eirc.persistence.EircServiceOrganization">
					<column name="eirc_service_organization_id">
						<comment>Service organization reference</comment>
					</column>
				</many-to-one>
			</subclass>

		</subclass>

	</class>

</hibernate-mapping>
