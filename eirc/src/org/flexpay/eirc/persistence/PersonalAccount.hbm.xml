<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.eirc.persistence">

	<class name="PersonalAccount" table="eirc_personal_accounts_tbl"
		   optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<properties name="apartment_person_accountStatus_tuple" unique="true">
			<many-to-one name="apartment" class="org.flexpay.ab.persistence.Apartment"
						 column="apartment_id" not-null="true" />
			<many-to-one name="responsiblePerson" column="person_id"
						 class="org.flexpay.ab.persistence.Person" not-null="true" />
			<many-to-one name="status" class="AccountStatus" column="status_id"
						 not-null="true" />
		</properties>
		<property name="creationDate" not-null="true" type="date" column="creation_date" />
		<property name="accountNumber" not-null="true" unique="true" column="account_number" />
	</class>

	<class name="PersonalAccountRecord" table="eirc_personal_account_records_tbl"
		   optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<properties name="account_record_service_pair" unique="true">
			<many-to-one name="account" column="account_id" class="PersonalAccount" not-null="true" />
			<many-to-one name="service" column="service_id" class="Service" not-null="true" />
		</properties>
		<property name="billBeginDate" column="bill_begin_date" not-null="true" type="date" />
		<property name="billEndDate"  column="bill_end_date" not-null="true" type="date" />
		<property name="amount" type="big_decimal" not-null="true" />
	</class>

	<class name="AccountStatus" table="eirc_account_statuses_tbl">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="status" not-null="true" />
		<set name="translations" inverse="true" cascade="all-delete-orphan">
			<key column="account_status_id" not-null="true" />
			<one-to-many class="AccountStatusTranslation" />
		</set>
	</class>

	<class name="AccountStatusTranslation" table="eirc_account_status_translations_tbl">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name" not-null="true" />
		<properties name="account_status_language_pair" unique="true">
			<many-to-one name="translatable" not-null="true" column="account_status_id"
						 class="AccountStatus" />
			<many-to-one name="lang" not-null="true" column="language_id"
						 class="org.flexpay.common.persistence.Language" />
		</properties>
	</class>

	<query name="AccountStatus.findAll">
		select distinct a
		from AccountStatus a
		left join fetch a.translations t
		left join fetch t.lang
	</query>
	
	<query name="PersonalAccount.findAccounts">
		select distinct pa
		from PersonalAccount pa
			left join fetch pa.responsiblePerson p
			left join fetch p.personIdentities 
		where pa.apartment.id=?
	</query>

</hibernate-mapping>
