<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages,org/flexpay/eirc/i18n/errors,org/flexpay/eirc/i18n/messages" />

	<package name="eirc" namespace="/eirc" extends="common">

		<action name="main">
			<result type="tiles">eirc.import</result>
		</action>

		<action name="spFileCreate" class="spFileCreateAction">
			<result name="input" type="tiles">eirc.import.file.upload.form</result>
		</action>

		<action name="spFileList" class="spFileListAction">
			<result name="success" type="tiles">eirc.import.file.list</result>
		</action>

		<action name="spFileAction" class="spFileAction">
			<result name="redirectSuccess" type="redirect">spFileList.action</result>
		</action>

		<action name="processing">
			<result type="tiles">eirc.processing</result>
		</action>


		<!-- Eirc account -->
		<action name="eircAccountView" class="eircAccountViewAction">
			<result name="success" type="tiles">eirc.eirc_account.view</result>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">eircAccountList</param>
			</result>
		</action>
		<action name="eircAccountCreateForm1" class="eircAccountCreateForm1Action">
			<result type="tiles">eirc.eirc_account.create.form1</result>
		</action>
		<action name="eircAccountCreateForm2" class="eircAccountCreateForm2Action">
			<result name="form2" type="tiles">eirc.eirc_account.create.form2</result>
			<result name="redirectForm1" type="redirect-action">
				<param name="actionName">eircAccountCreateForm1</param>
			</result>
		</action>
		<action name="eircAccountCreate" class="eircAccountCreateAction">
			<result name="redirectForm1" type="redirect-action">
				<param name="actionName">eircAccountCreateForm1</param>
			</result>
			<result name="redirectForm2" type="redirect-action">
				<param name="actionName">eircAccountCreateForm2</param>
				<param name="parse">true</param>
				<param name="apartmentId">${apartmentId}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">eircAccountView</param>
				<param name="parse">true</param>
				<param name="eircAccount.id">${eircAccount.id}</param>
			</result>
		</action>

	</package>

	<include file="org/flexpay/eirc/actions/organisation/struts.xml" />
	<include file="org/flexpay/eirc/actions/serviceprovider/struts.xml" />
	<include file="org/flexpay/eirc/actions/service/struts.xml" />
	<include file="org/flexpay/eirc/actions/processing/struts.xml" />
	<include file="org/flexpay/eirc/actions/registry/struts.xml" />
	<include file="org/flexpay/eirc/actions/quittance/struts.xml" />

</struts>
