<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,org/flexpay/common/i18n/common-errors,
			         org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages,
			         org/flexpay/orgs/i18n/errors,org/flexpay/orgs/i18n/messages,
			  		 org/flexpay/payments/i18n/errors,org/flexpay/payments/i18n/messages,
			         org/flexpay/eirc/i18n/errors,org/flexpay/eirc/i18n/messages" />

	<package name="eirc" namespace="/eirc" extends="common">

		<action name="main" class="menuPageAction">
			<result type="tiles">eirc.main</result>
		</action>

        <action name="mainDicts" class="menuPageAction">
            <result type="tiles">eirc.main.dicts</result>
        </action>

        <action name="mainImport" class="menuPageAction">
            <result type="tiles">eirc.main.import</result>
        </action>

        <action name="mainProcessing" class="menuPageAction">
            <result type="tiles">eirc.main.processing</result>
        </action>

        <action name="mainQuittances" class="menuPageAction">
            <result type="tiles">eirc.main.quittances</result>
        </action>

        <action name="mainOrganizationsDicts" class="menuPageAction">
            <result type="tiles">eirc.main.organizations_dicts</result>
        </action>

        <action name="mainServicesDicts" class="menuPageAction">
            <result type="tiles">eirc.main.services_dicts</result>
        </action>

        <action name="mainCashboxesDicts" class="menuPageAction">
            <result type="tiles">eirc.main.cashboxes_dicts</result>
        </action>

        <action name="mainImportImport" class="menuPageAction">
            <result type="tiles">eirc.main.import_import</result>
        </action>

        <action name="mainProcessingProcessing" class="menuPageAction">
            <result type="tiles">eirc.main.processing_processing</result>
        </action>

        <action name="mainQuittancesQuittances" class="menuPageAction">
            <result type="tiles">eirc.main.quittances_quittances</result>
        </action>

        <action name="mainQuittancesPayment" class="menuPageAction">
            <result type="tiles">eirc.main.quittances_payment</result>
        </action>

        <action name="mainQuittancesPackets" class="menuPageAction">
            <result type="tiles">eirc.main.quittances_packets</result>
        </action>

        <action name="doSpFileUploadAjax" class="spFileUploadAjaxAction">
            <result>/WEB-INF/jsp/eirc/import/response.jsp</result>
            <result name="error">/WEB-INF/jsp/eirc/import/response.jsp</result>
        </action>

		<action name="spFileCreate" class="spFileCreateAction">
			<result name="input" type="tiles">eirc.import.file.upload.form</result>
		</action>

		<action name="spFileList" class="spFilesListAction">
			<result name="success" type="tiles">eirc.import.file.list</result>
		</action>

		<action name="spFileAction" class="spFileAction">
			<result name="redirectSuccess" type="redirect-action">spFileList</result>
			<result name="redirectError" type="redirect-action">spFileList</result>
		</action>

	</package>

    <include file="org/flexpay/eirc/actions/cashbox/struts.xml" />
	<include file="org/flexpay/eirc/actions/eircaccount/struts.xml" />
	<include file="org/flexpay/eirc/actions/organization/struts.xml" />
	<include file="org/flexpay/eirc/actions/serviceprovider/struts.xml" />
	<include file="org/flexpay/eirc/actions/service/struts.xml" />
	<include file="org/flexpay/eirc/actions/processing/struts.xml" />
	<include file="org/flexpay/eirc/actions/registry/struts.xml" />
	<include file="org/flexpay/eirc/actions/quittance/struts.xml" />

</struts>
