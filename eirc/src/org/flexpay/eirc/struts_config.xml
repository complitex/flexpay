<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages,org/flexpay/eirc/i18n/errors,org/flexpay/eirc/i18n/messages" />

	<package name="eirc" namespace="/eirc" extends="common">

		<action name="main">
			<result type="tiles">eirc.import</result>
		</action>

		<action name="spFileCreate" class="spFileCreateAction">
			<result name="input" type="tiles">eirc.import.file.upload.form</result>
		</action>

		<action name="spFileList" class="spFileListAction">
			<result name="success" type="tiles">eirc.import.file.list</result>
		</action>

		<action name="spFileAction" class="spFileAction">
			<result name="redirectSuccess" type="redirect">spFileList.action</result>
		</action>

		<action name="data">
			<result type="tiles">eirc.data</result>
		</action>

		<action name="correspondence">
			<result type="tiles">eirc.data.correspondence</result>
		</action>

		<action name="correspondence_external" class="correspondenceExternalAction">
			<result type="dispatcher">/WEB-INF/jsp/eirc/data/correspondence/external_data.jsp</result>
		</action>

		<action name="correspondence_internal">
			<result type="dispatcher">/WEB-INF/jsp/eirc/data/correspondence/internal_data.jsp</result>
		</action>



		<action name="processing">
			<result type="tiles">eirc.processing</result>
		</action>

		<action name="generateQuittances" class="generateQuittancesAction">
			<result type="tiles">eirc.quittances.generate_quittances</result>
		</action>


		<action name="quittances">
			<result type="tiles">eirc.quittances</result>
		</action>

		<action name="printTickets" class="printTicketsAction">
			<result type="tiles">eirc.tickets.print_tickets</result>
		</action>

		<action name="ticketPayForm" class="ticketPayFormAction">
			<result name="input" type="tiles">eirc.tickets.ticket_find</result>
			<result name="success" type="tiles">eirc.tickets.ticket_pay_form</result>
		</action>

		<action name="ticketPay" class="ticketPayAction">
			<result name="success" type="tiles">eirc.tickets.ticket_pay_form</result>
		</action>

		<!-- Registries -->
		<action name="registries_list" class="listRegistriesAction">
			<result type="tiles">eirc.registry.list</result>
		</action>

		<action name="registry_view" class="showRegistryAction">
			<result type="tiles">eirc.registry.view</result>
			<result name="error" type="redirect-action">
				<param name="actionName">registries_list</param>
			</result>
		</action>

		<action name="select_correction_type" class="selectCorrectionTypeAction">
			<result name="input" type="tiles">eirc.select_correction_type</result>
			<result name="error" type="tiles">eirc.correction_type_error</result>
			<result name="apartment" type="redirect-action">
				<param name="actionName">registry_record_correct_address</param>
				<param name="parse">true</param>
				<param name="record.id">${record.id}</param>
			</result>
			<result name="building" type="redirect-action">
				<param name="actionName">registry_record_correct_address_building</param>
				<param name="parse">true</param>
				<param name="record.id">${record.id}</param>
			</result>
			<result name="street" type="redirect-action">
				<param name="actionName">registry_record_correct_address_street</param>
				<param name="parse">true</param>
				<param name="record.id">${record.id}</param>
			</result>
			<result name="person" type="redirect-action">
				<param name="actionName">registry_record_correct_person</param>
				<param name="parse">true</param>
				<param name="record.id">${record.id}</param>
			</result>
		</action>

		<action name="registry_record_correct_address" class="correctRecordAddressAction">
			<result type="tiles">eirc.registry.record.correct_address</result>
			<result name="complete" type="tiles">eirc.registry.record.correct_address_complete</result>
		</action>

		<action name="registry_record_correct_address_street" class="correctStreetAddressAction">
			<result type="tiles">eirc.registry.record.correct_address_street</result>
			<result name="complete" type="tiles">eirc.registry.record.correct_address_complete</result>
		</action>

		<action name="registry_record_correct_address_building" class="correctBuildingAddressAction">
			<result type="tiles">eirc.registry.record.correct_address_building</result>
			<result name="complete" type="tiles">eirc.registry.record.correct_address_complete</result>
		</action>

		<action name="registry_record_correct_person" class="correctRecordPersonAction">
			<result type="tiles">eirc.registry.record.correct_person</result>
			<result name="complete" type="tiles">eirc.registry.record.correct_address_complete</result>
		</action>

		<action name="process_registries" class="processRegistriesAction">
			<result type="redirect-action">
				<param name="actionName">registries_list</param>
			</result>
		</action>

		<action name="process_registry_records" class="processRegistryRecordsAction">
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">registry_view</param>
				<param name="parse">true</param>
				<param name="registry.id">${registry.id}</param>
			</result>
			<result name="redirectError" type="redirect-action">
				<param name="actionName" >registries_list</param>
			</result>
		</action>
		
		<action name="processListAction" class="processListAction">
			<result type="tiles">eirc.process.list</result>
		</action>
		<action name="processViewAction" class="processViewAction">
			<result type="tiles">eirc.process.view</result>
		</action>
		
		<action name="eircAccountList" class="eircAccountListAction">
			<result type="tiles">eirc.eirc_account.list</result>
		</action>
		<action name="eircAccountView" class="eircAccountViewAction">
			<result name="success" type="tiles">eirc.eirc_account.view</result>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">eircAccountList</param>
			</result>
		</action>
		<action name="eircAccountCreateForm1" class="eircAccountCreateForm1Action">
			<result type="tiles">eirc.eirc_account.create.form1</result>
		</action>
		<action name="eircAccountCreateForm2" class="eircAccountCreateForm2Action">
			<result name="form2" type="tiles">eirc.eirc_account.create.form2</result>
			<result name="redirectForm1" type="redirect-action">
				<param name="actionName">eircAccountCreateForm1</param>
			</result>
		</action>
		<action name="eircAccountCreate" class="eircAccountCreateAction">
			<result name="redirectForm1" type="redirect-action">
				<param name="actionName">eircAccountCreateForm1</param>
			</result>
			<result name="redirectForm2" type="redirect-action">
				<param name="actionName">eircAccountCreateForm2</param>
				<param name="parse">true</param>
				<param name="apartmentId">${apartmentId}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">eircAccountView</param>
				<param name="parse">true</param>
				<param name="eircAccount.id">${eircAccount.id}</param>
			</result>
		</action>

	</package>

	<include file="org/flexpay/eirc/actions/organisation/struts.xml" />
	<include file="org/flexpay/eirc/actions/serviceprovider/struts.xml" />
	<include file="org/flexpay/eirc/actions/service/struts.xml" />

</struts>
