<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="eirc-service-providers" namespace="/eirc" extends="common">

		<!-- Service Providers -->
		<action name="serviceProvidersList" class="listServiceProvidersAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_PROVIDER_READ</param>
			</interceptor-ref>
			<result type="tiles">eirc.service_providers.list</result>
		</action>

		<action name="serviceProvidersDelete" class="deleteServiceProvidersAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_PROVIDER_DELETE</param>
			</interceptor-ref>
			<result type="redirect-action">serviceProvidersList</result>
		</action>

		<action name="serviceProviderEdit" class="editServiceProviderAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_PROVIDER_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">eirc.service_provider.edit</result>
			<result name="redirectSuccess" type="redirect-action">serviceProvidersList</result>
		</action>

	</package>

</struts>
