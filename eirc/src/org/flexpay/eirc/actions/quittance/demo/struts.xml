<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="quittances-demo" namespace="/eirc" extends="common">

        <action name="demoQuittancePaySearch" class="demoQuittancePaySearchAction">
            <result name="input" type="tiles">eirc.quittances.demo.quittance_pay_search</result>
            <result name="redirectSuccess" type="redirect-action">
				<param name="actionName">demoQuittancePay</param>
                <param name="parse">true</param>
                <param name="quittance.id">${quittanceId}</param>
                <param name="quittanceNumber">${quittanceNumber}</param>
            </result>
        </action>

        <action name="demoQuittancePay" class="demoQuittancePayAction">
            <result name="input" type="tiles">eirc.quittances.demo.quittance_pay</result>
            <result name="redirectSuccess" type="redirect-action">demoQuittancePaySearch</result>
        </action>

    </package>

</struts>