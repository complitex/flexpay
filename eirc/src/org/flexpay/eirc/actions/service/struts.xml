<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="eirc-service" namespace="/eirc" extends="common">

		<!-- Service Types -->
		<action name="service_types_list" class="listServiceTypesAction">
			<result type="tiles">eirc.service_types.list</result>
		</action>

		<action name="service_types_delete" class="deleteServiceTypesAction">
			<result name="redirectSuccess" type="redirect-action">service_types_list</result>
		</action>

		<action name="service_type_edit" class="editServiceTypeAction">
			<result name="input" type="tiles">eirc.service_type.edit</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">service_types_list</param>
			</result>
		</action>


		<!-- Services -->
		<action name="services_list" class="listServicesAction">
			<result type="tiles">eirc.services.list</result>
		</action>

		<action name="service_edit" class="editServiceAction">
			<result name="input" type="tiles">eirc.service.edit</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">services_list</param>
			</result>
		</action>

	</package>

</struts>
