<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="organisations" namespace="/eirc" extends="common">

		<!-- Organisations -->
		<action name="organisations_list" class="listOrganisationsAction">
			<result type="tiles">eirc.organisations.list</result>
		</action>

		<action name="organisations_delete" class="deleteOrganisationsAction">
			<result type="redirect-action">
				<param name="actionName">organisations_list</param>
			</result>
		</action>

		<action name="organisation_edit" class="editOrganisationAction">
			<result name="input" type="tiles">eirc.organisation.edit</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">organisations_list</param>
				<param name="parse">true</param>
			</result>
		</action>

		<!-- Subdivisions -->
		<action name="subdivisionsList" class="listSubdivisionsAction">
			<result type="tiles">eirc.organisation.subdivisions.list</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">listOrganisationsAction</param>
			</result>
		</action>

		<action name="subdivisionsDelete" class="deleteSubdivisionsAction">
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">subdivisionsList</param>
				<param name="parse">true</param>
				<param name="organisation.id">${organisation.id}</param>
			</result>
			<result name="redirectError" type="redirect-action">
				<param name="actionName">organisations_list</param>
			</result>
		</action>

		<action name="subdivisionEdit" class="editSubdivisionAction">
			<result name="input" type="tiles">eirc.organisation.subdivision.edit</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">subdivisionsList</param>
				<param name="parse">true</param>
				<param name="organisation.id">${headOrganisation.id}</param>
			</result>
		</action>

		<!-- Banks -->
		<action name="banksList" class="listBanksAction">
			<result type="tiles">eirc.organisation.banks.list</result>
		</action>

		<action name="banksDelete" class="deleteBanksAction">
			<result type="redirect-action">
				<param name="actionName">banksList</param>
			</result>
		</action>

		<action name="bankEdit" class="editBankAction">
			<result name="input" type="tiles">eirc.organisation.bank.edit</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">banksList</param>
				<param name="parse">true</param>
			</result>
		</action>

	</package>
</struts>
