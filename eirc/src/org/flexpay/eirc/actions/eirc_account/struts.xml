<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="eirc_account" namespace="/eirc" extends="common">

		<!-- Eirc account -->
		<action name="eircAccountList" class="eircAccountListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_ACCOUNT_READ</param>
			</interceptor-ref>
			<result type="tiles">eirc.eirc_account.list</result>
		</action>

		<action name="eircAccountView" class="eircAccountViewAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_ACCOUNT_READ</param>
			</interceptor-ref>
			<result name="success" type="tiles">eirc.eirc_account.view</result>
			<result name="redirectError" type="redirect-action">eircAccountList</result>
		</action>

		<action name="eircAccountCreateForm1" class="eircAccountCreateForm1Action">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_ACCOUNT_ADD</param>
			</interceptor-ref>
			<result type="tiles">eirc.eirc_account.create.form1</result>
		</action>

		<action name="eircAccountCreateForm2" class="eircAccountCreateForm2Action">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_ACCOUNT_ADD</param>
			</interceptor-ref>
			<result name="form2" type="tiles">eirc.eirc_account.create.form2</result>
			<result name="redirectForm1" type="redirect-action">eircAccountCreateForm1</result>
		</action>

		<action name="eircAccountCreate" class="eircAccountCreateAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_ACCOUNT_ADD</param>
			</interceptor-ref>
			<result name="redirectForm1" type="redirect-action">eircAccountCreateForm1</result>
			<result name="redirectForm2" type="redirect-action">
				<param name="actionName">eircAccountCreateForm2</param>
				<param name="parse">true</param>
				<param name="apartmentId">${apartmentId}</param>
			</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">eircAccountView</param>
				<param name="parse">true</param>
				<param name="eircAccount.id">${eircAccount.id}</param>
			</result>
		</action>

	</package>

</struts>
