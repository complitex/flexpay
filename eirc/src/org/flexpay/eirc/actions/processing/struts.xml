<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="processing" namespace="/eirc" extends="common">

		<!-- Menu item -->
		<action name="processing">
			<result type="tiles">eirc.processing</result>
		</action>

		<action name="processListAction" class="processListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_PROCESS_READ</param>
			</interceptor-ref>
			<result type="tiles">eirc.process.list</result>
		</action>

		<action name="processViewAction" class="processViewAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_PROCESS_READ</param>
			</interceptor-ref>
			<result type="tiles">eirc.process.view</result>
		</action>

		<action name="deployProcessDefinitionAction" class="deployProcessDefinitionAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_PROCESS_DEFINITION_UPLOAD_NEW</param>
			</interceptor-ref>
			<result name="redirectSuccess" type="redirect-action">processListAction</result>
			<result name="input" type="tiles">eirc.process.deploy_definition</result>
		</action>

	</package>

</struts>
