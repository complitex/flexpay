<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.bti.persistence">

	<class name="BuildingAttribute" table="bti_building_attributes_tbl" discriminator-value="normal">
		<comment>Building attributes</comment>
		<id name="id" column="id">
			<generator class="native" />
		</id>

		<discriminator type="string">
			<column name="discriminator" not-null="true">
				<comment>Class hierarchy descriminator</comment>
			</column>
		</discriminator>

		<property name="value">
			<column name="attribute_value" not-null="true">
				<comment>Attribute value</comment>
			</column>
		</property>

		<many-to-one name="building" class="BtiBuilding"
					 foreign-key="FK_bti_building_attributes_tbl_building_id">
			<column name="building_id" not-null="true">
				<comment>Building reference</comment>
			</column>
		</many-to-one>

		<many-to-one name="attributeType" class="BuildingAttributeType"
					 foreign-key="bti_building_attributes_tbl_attribute_type_id">
			<column name="attribute_type_id" not-null="true">
				<comment>Attribute type reference</comment>
			</column>
		</many-to-one>

		<!-- map temp attributes to the same table -->
		<subclass name="BuildingTempAttribute" discriminator-value="tmp">

			<property name="begin">
				<column name="begin_date">
					<comment>Value begin date</comment>
				</column>
			</property>

			<property name="end">
				<column name="end_date">
					<comment>Value end date</comment>
				</column>
			</property>
		</subclass>

	</class>

	<query name="BuildingAttribute.findAttributes">
		from BuildingAttribute
		where building.id=?
	</query>

</hibernate-mapping>
