<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="tariffCalculationJob" class="org.flexpay.tc.process.TariffCalculationJob"
		  p:tariffCalculationResultService-ref="tariffCalculationResultService"
          p:btiBuildingService-ref="btiBuildingService"
          p:tariffCalculationRulesFileService-ref="tariffCalculationRulesFileService"
          p:lockManager-ref="lockManager"
          p:tariffServiceExt-ref="tariffServiceExt"
          scope="prototype" />

    <bean name="tariffCalcResultExportJob" class="org.flexpay.tc.process.TariffCalcResultExportJob"
          p:jdbcDriverClassName="${jdbc.export.driverClassName}"
          p:jdbcUrl="${jdbc.export.url}"
          p:jdbcUsername="${jdbc.export.username}"
          p:jdbcPassword="${jdbc.export.password}"
          p:procedure="${stored-procedure}"
          p:dataSourceDescriptionId="${datasource.id}"
          p:lockManager-ref="lockManager"
          p:classToTypeRegistry-ref="typeRegistryAb"
          p:correctionsService-ref="correctionsServiceAb"
          p:tariffCalculationResultService-ref="tariffCalculationResultService"
          scope="prototype" />

    <bean name="tariffCalcResultExportForBuildingJob" class="org.flexpay.tc.process.TariffCalcResultExportForBuildingJob"
          p:jdbcDriverClassName="${jdbc.export.driverClassName}"
          p:jdbcUrl="${jdbc.export.url}"
          p:jdbcUsername="${jdbc.export.username}"
          p:jdbcPassword="${jdbc.export.password}"
          p:procedure="${stored-procedure}"
          p:dataSourceDescriptionId="${datasource.id}"
          p:lockManager-ref="lockManager"
          p:classToTypeRegistry-ref="typeRegistryAb"
          p:correctionsService-ref="correctionsServiceAb"
          p:tariffCalculationResultService-ref="tariffCalculationResultService"
          scope="prototype" />
</beans>
