<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="tc-sewers" namespace="/tc" extends="common">

		<!-- Sewer Types -->
		<action name="sewerTypesList" class="sewerTypesListAction">
			<result type="tiles">tc.sewer_types.list</result>
		</action>

		<action name="sewerTypeDelete" class="sewerTypeDeleteAction">
			<result name="redirectSuccess" type="redirect-action">sewerTypesList</result>
		</action>

		<action name="sewerTypeEdit" class="sewerTypeEditAction">
			<result name="input" type="tiles">tc.sewer_type.edit</result>
			<result name="redirectSuccess" type="redirect-action">sewerTypesList</result>
		</action>

	</package>

</struts>
