<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="processManagerPayments" parent="processManager" autowire-candidate="false">
		<property name="definitionPaths">
			<list merge="true">
				<value>WEB-INF/payments/process</value>
			</list>
		</property>
	</bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
            <list>
                <value>/WEB-INF/payments/configs/synchronization.properties</value>
                <value>/WEB-INF/payments/configs/module.properties</value>
            </list>
        </property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
        <property name="fileEncoding" value="UTF-8" />
	</bean>

    <bean name="jobGeneratePaymentsRegistry" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="org.flexpay.payments.process.export.GeneratePaymentsRegistry"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="processManager" value-ref="processManagerPayments"/>
                <entry key="providerService" value-ref="serviceProviderService"/>
                <entry key="serviceProviderAttributeService" value-ref="serviceProviderServiceAttributeTarget"/>
                <entry key="providerId" value=""/>
            </map>
        </property>
    </bean>

    <bean name="jobTradingDay" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="org.flexpay.payments.process.export.TradingDay"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="processManager" value-ref="processManagerPayments"/>
                <entry key="paymentPoints" value-ref="paymentPoints"/>
            </map>
        </property>
    </bean>

    <bean id="jobGeneratePaymentsRegistryTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobGeneratePaymentsRegistry" />
		<property name="cronExpression" value="${payments.cron.schedule.sync}" />
	</bean>

    <bean id="jobTradingDayTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobTradingDay" />
		<property name="cronExpression" value="${trading.day.cron.schedule.sync}" />
	</bean>


    <bean id="schedulerFactoryBeanRegistry" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!-- ref bean="jobGeneratePaymentsRegistryTrigger"/ -->
                <ref bean="jobTradingDayTrigger"/>
            </list>
        </property>
        <property name="quartzProperties">
            <props>
                <prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
            </props>
        </property>
        <property name="startupDelay" value="20"/>
    </bean>


</beans>
