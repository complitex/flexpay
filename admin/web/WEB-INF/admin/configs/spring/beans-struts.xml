<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="userListAction"
		  class="org.flexpay.admin.action.user.UserListAction"
		  p:preferencesService-ref="userPreferencesService"
		  scope="prototype" />

	<bean id="userListPageAction" parent="staticPageAction"
          p:crumbNameKey="admin.crumbs.user_list"
          scope="prototype" />

	<bean id="editUserAction"
		  class="org.flexpay.admin.action.user.UserEditAction"
		  p:userRoleService-ref="userRoleService"
		  p:preferencesService-ref="userPreferencesService"
		  p:userPreferencesFactory-ref="userPreferencesFactory"
		  p:crumbNameKey="admin.crumbs.edit_user"
		  scope="prototype" />

</beans>
