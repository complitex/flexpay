<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
		   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!--level1-->
	<bean name="admin" parent="fpMenu"
		  p:name="admin"
		  p:title="admin.menu"
          p:namespace="/admin"
		  p:action="main"
		  p:parent-ref="fpMenu">
        <property name="userRole">
            <util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN" />
        </property>
    </bean>

	<!--level2-->
	<bean name="admin_users" parent="admin"
		  p:name="admin.users"
		  p:title="admin.menu2.users"
		  p:action="mainUsers"
		  p:parent-ref="admin">
        <property name="userRole">
            <util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_USERS" />
        </property>
    </bean>

	<bean name="admin.certificates" parent="admin"
		  p:name="admin.certificates"
		  p:title="admin.menu2.certificates"
		  p:action="main"
		  p:parent-ref="admin">
		<property name="userRole">
			<util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_CERTIFICATES" />
		</property>
	</bean>

	<!--level3-->
	<bean name="admin_users_users" parent="admin_users"
          p:name="admin.users2"
          p:title="admin.menu2.users"
		  p:action="mainUsersUsers"
          p:parent-ref="admin_users">
        <property name="userRole">
            <util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_USERS" />
        </property>
    </bean>

	<bean name="admin.certificates.certificates" parent="admin.certificates"
		  p:name="admin.certificates.certificates"
		  p:title="admin.menu2.certificates"
		  p:action="main"
		  p:parent-ref="admin.certificates">
		<property name="userRole">
			<util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_CERTIFICATES" />
		</property>
	</bean>

	<!--level4-->
	<bean name="admin_user_list" parent="admin_users_users"
          p:name="admin.user.list"
          p:title="admin.user.list"
          p:action="userList"
          p:parent-ref="admin_users_users">
        <property name="userRole">
            <util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_USERS" />
        </property>
    </bean>

	<bean name="admin.certificates.certificates.list" parent="admin.certificates.certificates"
		  p:name="admin.certificates.certificates.list"
		  p:title="admin.menu4.certificates.list"
		  p:action="certificatesList"
		  p:parent-ref="admin.certificates.certificates">
		<property name="userRole">
			<util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_CERTIFICATES" />
		</property>
	</bean>

	<bean name="admin.certificates.certificates.upload" parent="admin.certificates.certificates"
		  p:name="admin.certificates.certificates.upload"
		  p:title="admin.menu4.certificates.upload"
		  p:action="certificateUpload"
		  p:parent-ref="admin.certificates.certificates">
		<property name="userRole">
			<util:constant static-field="org.flexpay.admin.service.Roles.ROLE_MENU_ADMIN_CERTIFICATES" />
		</property>
	</bean>

</beans>
