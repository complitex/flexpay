<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		 version="2.5">

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>FlexPay payments module</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml
			/WEB-INF/applicationContext-security.xml
		</param-value>
	</context-param>

	<!--
		- Location of the Log4J config file, for initialization and refresh checks.
		- Applied by Log4jConfigListener.
	-->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/common/configs/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>definitions-config</param-name>
		<param-value>
			/WEB-INF/common/configs/tiles_common.xml,/WEB-INF/ab/configs/tiles_ab.xml,/WEB-INF/payments/configs/tiles_payments.xml
		</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.security.ui.session.HttpSessionEventPublisher</listener-class>
	</listener>
	<listener>
		<listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
	</listener>
    <listener>
        <listener-class>net.sourceforge.navigator.menu.MenuContextListener</listener-class>
    </listener>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>actionFilter</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				struts-default.xml,struts-plugin.xml,org/flexpay/common/struts_config.xml,org/flexpay/ab/struts_config.xml,org/flexpay/payments/struts_config.xml
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>actionFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>

	<servlet>
		<servlet-name>spring-ws</servlet-name>
		<servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>spring-ws</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>secure-resource</web-resource-name>
			<url-pattern>*.action</url-pattern>
			<http-method>POST</http-method>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<security-role>
		<role-name>ROLE_BASIC</role-name>
	</security-role>

	<!-- ab reading roles (used for filters initialization) -->
	<security-role>
		<role-name>ROLE_AB_COUNTRY_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_AB_REGION_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_AB_TOWN_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_AB_DISTRICT_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_AB_STREET_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_AB_BUILDING_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_AB_APARTMENT_READ</role-name>
	</security-role>

	<!-- operation roles -->
	<security-role>
		<role-name>ROLE_PAYMENTS_OPERATION_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_PAYMENTS_OPERATION_ADD</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_PAYMENTS_OPERATION_CHANGE</role-name>
	</security-role>

	<!-- organization roles -->
	<security-role>
		<role-name>ROLE_ORGS_ORGANIZATION_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_PAYMENTS_DOCUMENT_TYPE_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_PAYMENTS_SERVICE_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_ORGS_SERVICE_PROVIDER_READ</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_PAYMENTS_DEVELOPER</role-name>
	</security-role>

	<security-role>
		<role-name>ROLE_PAYMENTS_PAYMENTS_REPORT</role-name>
	</security-role>

    <!-- Menu -->
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_ACCOUNTANT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_ADDRESS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_ACCOUNT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_QUITTANCE</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_REGISTERS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_REPORTS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_ADDRESS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_ACCOUNT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_QUITTANCE</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_REPORTS_ADDRESS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_REPORTS_ACCOUNT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_REPORTS_QUITTANCE</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_REPORTS_REPORTS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_LIST_ADDRESS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_LIST_ACCOUNT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_LIST_QUITTANCE</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_TAKEN_REPORTS_ADDRESS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_TAKEN_REPORTS_ACCOUNT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_OPERATIONS_TAKEN_REPORTS_QUITTANCE</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_IMPORT_PAYMENTS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_TAKEN_REPORTS_ADDRESS</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_TAKEN_REPORTS_ACCOUNT</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_MENU_PAYMENTS_TAKEN_REPORTS_QUITTANCE</role-name>
    </security-role>

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/resources/common/jsp/login.jsp</form-login-page>
			<form-error-page>/resources/common/jsp/login-failed.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<error-page>
		<error-code>403</error-code>
		<location>/resources/common/jsp/forbidden.jsp</location>
	</error-page>

    <welcome-file-list>
            <welcome-file>/resources/payments/jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>http://struts-menu.sourceforge.net/tag</taglib-uri>
            <taglib-location>/WEB-INF/tld/struts-menu.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>
