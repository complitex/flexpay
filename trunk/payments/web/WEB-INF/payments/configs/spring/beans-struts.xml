<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Define module payments struts actions beans -->

	<!-- search-related actions -->
	<bean id="searchByQuittanceNumberAction"
		  class="org.flexpay.payments.actions.search.SearchByQuittanceNumberAction" />

	<bean id="searchByAdressAction" class="org.flexpay.payments.actions.search.SearchByAddressAction"
		  p:parentService-ref="apartmentService" />

	<bean id="searchByEircAccountAction" class="org.flexpay.payments.actions.search.SearchByEircAccountAction" />

	<!-- operation-related actions -->
	<bean id="operationsListAction" class="org.flexpay.payments.actions.operations.OperationsListAction" />

	<!-- reports-related actions -->
	<bean id="generateReportAction" class="org.flexpay.payments.actions.reports.GenerateReportAction" />

	<!-- registry-related actions -->
	<bean id="generateRegistryAction" class="org.flexpay.payments.actions.registry.GenerateRegistryAction" />

</beans>
