<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Define module payments struts actions beans -->

	<!-- search-related actions -->
	<bean id="searchByQuittanceNumberAction" scope="prototype"
		  class="org.flexpay.payments.actions.search.SearchByQuittanceNumberAction" />

	<bean id="searchByAdressAction" scope="prototype"
		  class="org.flexpay.payments.actions.search.SearchByAddressAction" />

	<bean id="searchByEircAccountAction" scope="prototype"
		  class="org.flexpay.payments.actions.search.SearchByEircAccountAction" />

	<!-- operation-related actions -->
	<bean id="operationsListAction" scope="prototype"
		  class="org.flexpay.payments.actions.operations.OperationsListAction" />

	<!-- reports-related actions -->
	<bean id="generateReportAction" scope="prototype"
		  class="org.flexpay.payments.actions.reports.GenerateReportAction" />

	<!-- registry-related actions -->
	<bean id="generateRegistryAction" scope="prototype"
		  class="org.flexpay.payments.actions.registry.GenerateRegistryAction" />

	<!-- Services -->
	<bean id="serviceTypesListAction" scope="prototype"
		  class="org.flexpay.payments.actions.service.ServiceTypesListAction"
		  p:serviceTypeService-ref="serviceTypeService" />

	<bean id="serviceTypeDeleteAction" scope="prototype"
		  class="org.flexpay.payments.actions.service.ServiceTypeDeleteAction"
		  p:serviceTypeService-ref="serviceTypeService" />

	<bean id="serviceTypeEditAction" scope="prototype"
		  class="org.flexpay.payments.actions.service.ServiceTypeEditAction"
		  p:serviceTypeService-ref="serviceTypeService" />

	<bean id="servicesListAction" scope="prototype"
		  class="org.flexpay.payments.actions.service.ServicesListAction"
		  p:providerService-ref="serviceProviderService"
		  p:spService-ref="spService" />

	<bean id="serviceEditAction" scope="prototype"
		  class="org.flexpay.payments.actions.service.ServiceEditAction"
		  p:serviceTypeService-ref="serviceTypeService"
		  p:measureUnitService-ref="measureUnitService"
		  p:providerService-ref="serviceProviderService"
		  p:spService-ref="spService" />

</beans>
