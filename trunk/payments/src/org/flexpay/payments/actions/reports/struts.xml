<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="reports" namespace="/payments" extends="common">

		<action name="receivedPaymentsReport" class="generateReportAction">
			<result type="tiles">payments.report.generate</result>
		</action>

		<action name="generatePaymentsReport" class="paymentsReportAction">
			<result name="input" type="tiles">payments.report.generatePaymentsReport</result>
			<result type="stream">
				<param name="contentType">text/csv</param>
				<param name="inputName">inputStream</param>
				<param name="contentLength">${file.size}</param>
				<param name="contentDisposition">filename="${file.originalName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

		<action name="paymentOperationReportAction" class="paymentOperationReportAction">
			<result name="success" type="tiles">payments.report.paymentOperationReportAction</result>
			<result name="file" type="stream">
				<param name="contentType">text/pdf</param>
				<param name="inputName">inputStream</param>
				<param name="contentLength">${file.size}</param>
				<param name="contentDisposition">filename="${file.originalName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

	</package>

</struts>
