<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="search" namespace="/payments" extends="common">

		<action name="searchByQuittanceNumber" class="searchByQuittanceNumberAction">
			<result type="tiles">payments.search.quittance_number</result>
		</action>

		<action name="searchByEircAccount" class="searchByEircAccountAction">
			<result type="tiles">payments.search.eirc_account</result>
		</action>

		<action name="searchByAddress" class="searchByAdressAction">
			<result type="tiles">payments.search.address</result>
		</action>

	</package>

</struts>