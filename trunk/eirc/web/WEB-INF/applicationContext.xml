<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- ConfigLoader is a subject to replace in dependent modules -->
	<bean id="eircConfigLoader" class="org.flexpay.eirc.util.config.EircConfigLoader"
		  init-method="loadConfig">
		<constructor-arg index="0">
			<list>
				<value>classpath:org/flexpay/common/application_config.xml</value>
				<value>classpath:org/flexpay/eirc/application_config.xml</value>
				<value>classpath:org/flexpay/common/application_config_test.xml</value>
			</list>
		</constructor-arg>
		<property name="languageService" ref="languageService" />
	</bean>

    <import resource="common/configs/spring/config.xml" />
    <import resource="ab/configs/spring/config.xml" />
    <import resource="bti/configs/spring/config.xml" />
    <import resource="eirc/configs/spring/config.xml" />

</beans>