<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
	   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="spService"
		  class="org.springmodules.cache.interceptor.proxy.CacheProxyFactoryBean">
		<property name="cacheProviderFacade" ref="cacheProviderFacade" />
		<property name="cachingModels">
			<props>
				<prop key="read">cacheName=flexpayCache</prop>
				<prop key="listServices">cacheName=flexpayCache</prop>
				<prop key="getService">cacheName=flexpayCache</prop>
				<prop key="flexpayCache">cacheName=flexpayCache</prop>
			</props>
		</property>
		<property name="flushingModels">
			<props>
				<prop key="save*">cacheNames=flexpayCache</prop>
			</props>
		</property>
		<property name="target" ref="spServiceTarget" />
	</bean>

	<bean id="consumerService"
		  class="org.springmodules.cache.interceptor.proxy.CacheProxyFactoryBean">
		<property name="cacheProviderFacade" ref="cacheProviderFacade" />
		<property name="cachingModels">
			<props>
				<prop key="findService">cacheName=flexpayCache</prop>
			</props>
		</property>
		<property name="target" ref="consumerServiceTarget" />
	</bean>

</beans>