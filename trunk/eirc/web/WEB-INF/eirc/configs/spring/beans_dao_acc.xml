<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="documentDao" parent="abstractDao">
		<property name="proxyInterfaces" value="org.flexpay.accounting.dao.DocumentDao" />
		<property name="target">
			<bean parent="abstractDaoTarget">
				<constructor-arg value="org.flexpay.accounting.persistence.Document" />
			</bean>
		</property>
	</bean>

    <bean id="documentTypeDao" parent="abstractDao">
        <property name="proxyInterfaces" value="org.flexpay.accounting.dao.DocumentTypeDao" />
        <property name="target">
            <bean parent="abstractDaoTarget">
                <constructor-arg value="org.flexpay.accounting.persistence.DocumentType" />
            </bean>
        </property>
    </bean>

    <bean id="eircSubjectDao" parent="abstractDao">
        <property name="proxyInterfaces" value="org.flexpay.accounting.dao.EircSubjectDao" />
        <property name="target">
            <bean parent="abstractDaoTarget">
                <constructor-arg value="org.flexpay.accounting.persistence.EircSubject" />
            </bean>
        </property>
    </bean>

    <bean id="operationDao" parent="abstractDao">
        <property name="proxyInterfaces" value="org.flexpay.accounting.dao.OperationDao" />
        <property name="target">
            <bean parent="abstractDaoTarget">
                <constructor-arg value="org.flexpay.accounting.persistence.operations.Operation" />
            </bean>
        </property>
    </bean>

</beans>