<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="eirc-service" namespace="/eirc" extends="common">

		<!-- Service Types -->
		<action name="serviceTypesList" class="serviceTypesListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_TYPE_READ</param>
			</interceptor-ref>
			<result type="tiles">eirc.service_types.list</result>
		</action>

		<action name="serviceTypeDelete" class="serviceTypeDeleteAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_TYPE_DELETE</param>
			</interceptor-ref>
			<result name="redirectSuccess" type="redirect-action">serviceTypesList</result>
		</action>

		<action name="serviceTypeEdit" class="serviceTypeEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_TYPE_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">eirc.service_type.edit</result>
			<result name="redirectSuccess" type="redirect-action">serviceTypesList</result>
		</action>

		<!-- Services -->
		<action name="servicesList" class="servicesListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_READ</param>
			</interceptor-ref>
			<result type="tiles">eirc.services.list</result>
		</action>

		<action name="serviceEdit" class="serviceEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">EIRC_SERVICE_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">eirc.service.edit</result>
			<result name="redirectSuccess" type="redirect-action">servicesList</result>
		</action>

	</package>

</struts>
