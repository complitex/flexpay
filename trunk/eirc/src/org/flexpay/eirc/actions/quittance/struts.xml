<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="quittances" namespace="/eirc" extends="common">

		<!-- Quittances -->
		<action name="quittances">
			<result type="tiles">eirc.quittances</result>
		</action>

		<action name="generateQuittances" class="generateQuittancesAction">
			<result type="tiles">eirc.quittances.generate_quittances</result>
		</action>

		<action name="printQuittances" class="printTicketsAction">
			<result type="tiles">eirc.tickets.print_tickets</result>
		</action>

		<action name="searchQuittance" class="quittanceSearchAction">
			<result name="input" type="tiles">eirc.quittances.find_quittance</result>
			<result name="redirectSuccess" type="tiles">
				<param name="actionName">payQuittanceForm</param>
				<param name="parse">true</param>
				<param name="quittance.id">${quittance.id}</param>
			</result>
		</action>

		<action name="payQuittanceForm" class="quittancePayFormAction">
			<result name="input" type="tiles">eirc.tickets.ticket_find</result>
			<result name="success" type="tiles">eirc.tickets.ticket_pay_form</result>
		</action>

		<action name="payQuittance" class="quittancePayAction">
			<result name="success" type="tiles">eirc.tickets.ticket_pay_form</result>
		</action>

	</package>

</struts>
