<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="quittances" namespace="/eirc" extends="common">

		<!-- Quittances -->
		<action name="quittances" class="staticPageAction">
			<result type="tiles">eirc.quittances</result>
		</action>

		<action name="quittanceGenerate" class="quittanceGenerateAction">
			<result type="tiles">eirc.quittances.generate_quittances</result>
		</action>

		<action name="printQuittances" class="printTicketsAction">
			<result type="tiles">eirc.tickets.print_tickets</result>
		</action>

		<action name="quittancePacketList" class="quittancePacketsListAction">
			<result name="success" type="tiles">eirc.quittances.packets_list</result>
		</action>

		<action name="quittancePacketEdit" class="quittancePacketEditAction">
			<result name="input" type="tiles">eirc.quittances.packet_edit</result>
			<result name="redirectSuccess" type="redirect-action">quittancePacketList</result>
		</action>

		<action name="quittancePacketView" class="quittancePacketViewAction">
			<result name="success" type="tiles">eirc.quittances.packet_view</result>
			<result name="redirectError" type="redirect-action">quittancePacketList</result>
		</action>

		<action name="quittanceSearch" class="quittanceSearchAction">
			<result name="input" type="tiles">eirc.quittances.find_quittance</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">quittancePay</param>
				<param name="parse">true</param>
				<param name="quittance.id">${quittance.id}</param>
				<param name="packet.id">${packet.id}</param>
			</result>
		</action>

		<action name="quittancePay" class="quittancePayAction">
			<result name="input" type="tiles">eirc.quittances.pay_quittance</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">quittancePacketView</param>
				<param name="parse">true</param>
				<param name="packet.id">${packet.id}</param>
			</result>
		</action>

	</package>

</struts>
