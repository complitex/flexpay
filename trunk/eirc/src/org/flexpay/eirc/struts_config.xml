<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages,org/flexpay/eirc/i18n/errors,org/flexpay/eirc/i18n/messages" />

	<package name="eirc" namespace="/eirc" extends="common">

		<action name="main">
			<result type="tiles">eirc.import</result>
		</action>
		
		<action name="spFileCreate" class="spFileCreateAction">
			<result name="form" type="tiles">eirc.import.file.upload.form</result>
		</action>
		
		<action name="spFileList" class="spFileListAction">
			<result name="success" type="tiles">eirc.import.file.list</result>
		</action>
		
		<action name="spFileAction" class="spFileAction">
			<result name="success" type="redirect">spFileList.action</result>
		</action>
		
		<action name="data">
			<result type="tiles">eirc.data</result>
		</action>
		
		<action name="correspondence">
			<result type="tiles">eirc.data.correspondence</result>
		</action>
		
		<action name="correspondence_external" class="correspondenceExternalAction">
			<result type="dispatcher">/WEB-INF/jsp/eirc/data/correspondence/external_data.jsp</result>
		</action>
		
		<action name="correspondence_internal">
			<result type="dispatcher">/WEB-INF/jsp/eirc/data/correspondence/internal_data.jsp</result>
		</action>
		
		<action name="street_ajax" class="streetAjaxAction">
			<result name="success" type="dispatcher">/WEB-INF/jsp/eirc/data/correspondence/street_ajax.jsp</result>
		</action>
		
		<action name="building_ajax" class="buildingAjaxAction">
			<result name="success" type="dispatcher">/WEB-INF/jsp/eirc/data/correspondence/building_ajax.jsp</result>
		</action>
		
		
		

	</package>
	
</struts>
