<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.eirc.persistence">

	<class name="Organisation" table="eirc_organisations_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<version name="version" column="version" access="field" />
		<property name="status" not-null="true"/>
		<property name="individualTaxNumber" column="individual_tax_number" not-null="true"/>
		<property name="kpp" not-null="true"/>
		<property name="uniqueId" not-null="true" column="unique_id" unique="true"/>
		<set name="descriptions" inverse="true" cascade="all-delete-orphan">
			<key column="organisation_id" not-null="true"/>
			<one-to-many class="OrganisationDescription"/>
		</set>
		<set name="names" inverse="true" cascade="all-delete-orphan">
			<key column="organisation_id" not-null="true"/>
			<one-to-many class="OrganisationName"/>
		</set>
		<set name="serviceProviders" inverse="true">
			<key column="organisation_id" not-null="true"/>
			<one-to-many class="ServiceProvider"/>
		</set>
	</class>

	<class name="OrganisationDescription" table="eirc_organisation_descriptions_tbl">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="name"/>
		<properties name="lang_organisation_pair" unique="true">
			<many-to-one name="lang" foreign-key="FK_eirc_organisation_description_language" class="org.flexpay.common.persistence.Language">
				<column name="language_id" not-null="true">
					<comment>Language reference</comment>
				</column>
			</many-to-one>
			<many-to-one name="translatable" class="Organisation" foreign-key="FK_eirc_organisation_description_organisation">
				<column name="organisation_id" not-null="true">
					<comment>Organisation reference</comment>
				</column>
			</many-to-one>
		</properties>
	</class>

	<class name="OrganisationName" table="eirc_organisation_names_tbl">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="name"/>
		<properties name="lang_organisation_pair" unique="true">
			<many-to-one name="lang" foreign-key="FK_eirc_organisation_name_language" class="org.flexpay.common.persistence.Language">
				<column name="language_id" not-null="true">
					<comment>Language reference</comment>
				</column>
			</many-to-one>
			<many-to-one name="translatable" class="Organisation" foreign-key="FK_eirc_organisation_name_organisation">
				<column name="organisation_id" not-null="true">
					<comment>Organisation reference</comment>
				</column>
			</many-to-one>
		</properties>
	</class>

	<class name="ServiceOrganisation" table="eirc_service_organisations_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="status" not-null="true"/>
		<many-to-one name="organisation" foreign-key="FK_eirc_service_organisation_organisation" class="Organisation">
			<column name="organisation_id" not-null="true">
				<comment>Organisation reference</comment>
			</column>
		</many-to-one>
		<set name="buildings" inverse="true">
			<key column="eirc_service_organisation_id"/>
			<one-to-many class="ServedBuilding"/>
		</set>
		<many-to-one name="district" foreign-key="FK_eirc_service_organisation_district" class="org.flexpay.ab.persistence.District">
			<column name="district_id" not-null="true">
				<comment>District reference organisation is servicing</comment>
			</column>
		</many-to-one>
		<set name="descriptions" inverse="true">
			<key column="service_organisation_id"/>
			<one-to-many class="ServiceOrganisationDescription"/>
		</set>
	</class>

	<class name="ServiceOrganisationDescription" table="eirc_service_organisation_descriptions_tbl">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="name"/>
		<properties name="lang_service_organisation_pair" unique="true">
			<many-to-one name="lang" foreign-key="FK_eirc_service_organisation_description_language" class="org.flexpay.common.persistence.Language">
				<column name="language_id" not-null="true">
					<comment>Language reference</comment>
				</column>
			</many-to-one>
			<many-to-one name="translatable" class="ServiceOrganisation" foreign-key="FK_eirc_service_organisation_description_service_organisation">
				<column name="service_organisation_id" not-null="true">
					<comment>Organisation reference</comment>
				</column>
			</many-to-one>
		</properties>
	</class>

	<query name="Organisation.findOrganisationsById">
		from Organisation where uniqueId=?
	</query>

	<query name="Organisation.findAllOrganisations">
		select distinct o
		from Organisation o
		 	left join fetch o.names
		 	left join fetch o.descriptions 
		where o.status=0
		order by cast(o.uniqueId as integer)
	</query>

	<query name="Organisation.readFull">
		select distinct o
		from Organisation o
		 	left join fetch o.names
		 	left join fetch o.descriptions
		where o.id=?
	</query>

	<query name="Organisation.findOrganisations.count">
		select count(*)
		from Organisation o
		where o.status=0
	</query>

	<query name="Organisation.findOrganisations">
		select distinct o
		from Organisation o
		 	left join fetch o.names
		 	left join fetch o.descriptions
		where o.status=0
		order by cast(o.uniqueId as integer)
	</query>


	<query name="ServiceOrganisation.findServedBuildings">
		from ServedBuilding where serviceOrganisation.id=?
	</query>


	<query name="ServiceOrganisation.readFull">
		SELECT DISTINCT so
		FROM ServiceOrganisation so
		INNER JOIN FETCH so.organisation o
		LEFT JOIN FETCH so.buildings sb
		LEFT JOIN FETCH sb.apartments a
		LEFT JOIN FETCH a.personRegistrations r
		LEFT JOIN FETCH r.person
		WHERE so.id=?
	</query>

	<query name="ServiceOrganisation.listServiceOrganisation">
		SELECT DISTINCT so
		FROM ServiceOrganisation so
		INNER JOIN FETCH so.organisation o
		LEFT JOIN FETCH o.names n
		LEFT JOIN FETCH n.lang l
	</query>


</hibernate-mapping>
