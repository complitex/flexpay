<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.eirc.persistence">

	<class name="Organisation" table="eirc_organisations_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="status" not-null="true" />
		<property name="individualTaxNumber" column="individual_tax_number" not-null="true" />
		<property name="kpp" not-null="true" />
		<property name="description" not-null="true" />
		<property name="name" not-null="true" />
		<property name="uniqueId" not-null="true" column="unique_id" unique="true" />
		<many-to-one name="district" not-null="true" column="district_id"
					 class="org.flexpay.ab.persistence.District" />
	</class>

	<query name="Organisation.findOrganisationsById">
		from Organisation where uniqueId=?
	</query>

</hibernate-mapping>
