<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.eirc.persistence">
	<class name="TicketServiceAmount" table="eirc_ticket_service_amounts_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="ticket" column="ticket_id" />
		<many-to-one name="serviceType" column="service_type_id" not-null="true" />
		<property name="dateFromAmount" not-null="true" column="date_from_amount" />
		<property name="dateTillAmount" not-null="true" column="date_till_amount" />
	</class>
	
	<class name="Ticket" table="eirc_tickets_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="creationDate" not-null="true" column="creation_date" />
		<many-to-one name="serviceOrganisation" column="service_organisation_id" not-null="true" />
		<many-to-one name="person" column="person_id" not-null="true" />
		<property name="ticketNumber" not-null="true" column="ticket_number" />
		<property name="dateFrom" not-null="true" column="date_from" />
		<property name="dateTill" not-null="true" column="date_till" />
		<many-to-one name="apartment" column="apartment_id" not-null="true" />
		<set name="ticketServiceAmounts" inverse="true">
			<key column="ticket_id" />
			<one-to-many class="TicketServiceAmount" />
		</set>
	</class>
	
	<query name="Ticket.findObjectsByPersonAndTillDate">
		FROM Ticket t
		WHERE t.person.id=? AND t.dateTill=?
	</query>
	
	<query name="Ticket.findObjectsByPersonAndTillDate.count">
		select count(*) from Ticket t where t.person.id=? AND t.dateTill=?
	</query>
	
	<query name="Ticket.findByOrganisationAndInterval">
		FROM Ticket t
		WHERE t.serviceOrganisation.id=? AND
		      t.dateFrom=? AND
		      t.dateTill=?
		ORDER BY t.apartment.building.id
	</query>


</hibernate-mapping>