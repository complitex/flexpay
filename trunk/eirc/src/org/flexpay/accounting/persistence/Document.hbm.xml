<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.accounting.persistence">
    
    <typedef name="documentStatusType" class="org.flexpay.common.persistence.GenericEnumUserType">
        <param name="enumClass">
            org.flexpay.accounting.persistence.DocumentStatus
        </param>
        <param name="identifierMethod">
            toInt
        </param>
        <param name="valueOfMethod">
            fromInt
        </param>
    </typedef>

    <class name="org.flexpay.accounting.persistence.Document" table="accounting_documents_tbl" optimistic-lock="version">
        <comment>Document</comment>
        <id name="id">
            <column name="id">
                <comment>Primary key</comment>
            </column>
            <generator class="native" />
        </id>
        <version name="version" access="field">
            <column name="version">
                <comment>Optimistic lock version</comment>
            </column>
        </version>
        <property name="summ">
            <column name="summ" not-null="true">
                <comment>Summ</comment>
            </column>
        </property>
        <property name="documentStatus" type="documentStatusType">
            <column name="status" not-null="true">
                <comment>Document status</comment>
            </column>
        </property>
        <one-to-one name="subjectDebet" class="org.flexpay.accounting.persistence.EircSubject" />
        <one-to-one name="subjectCredit" class="org.flexpay.accounting.persistence.EircSubject" />

        <many-to-one name="operation" class="org.flexpay.accounting.persistence.operations.Operation" foreign-key="FK_accounting_document_tbl_accounting_operation_id">
            <column name="operation_id" not-null="true">
                <comment>Operation</comment>
            </column>
        </many-to-one>

        <many-to-one name="registryRecord" class="org.flexpay.eirc.persistence.RegistryRecord" foreign-key="FK_accounting_document_tbl_registry_record_id">
            <column name="registry_record_id" not-null="true">
                <comment>Registry record</comment>
            </column>
        </many-to-one>

        <many-to-one name="documentType" class="org.flexpay.accounting.persistence.DocumentType" foreign-key="FK_accounting_document_tbl_document_type_id">
            <column name="type_id" not-null="true">
                <comment>Document type</comment>
            </column>
        </many-to-one>

    </class>

    <class name="org.flexpay.accounting.persistence.EircSubject" table="accounting_eirc_subject_tbl" optimistic-lock="version">
        <comment>Document</comment>
        <id name="id">
            <column name="id">
                <comment>Primary key</comment>
            </column>
            <generator class="native" />
        </id>
        <version name="version" access="field">
            <column name="version">
                <comment>Optimistic lock version</comment>
            </column>
        </version>
        <one-to-one name="eircAccount" class="org.flexpay.eirc.persistence.EircAccount" />
        <one-to-one name="organization" class="org.flexpay.eirc.persistence.Organization" />
    </class>

    <class name="org.flexpay.accounting.persistence.DocumentType" table="accounting_document_types_tbl" optimistic-lock="version">
        <comment>Document type</comment>
        <id name="id">
            <column name="id">
                <comment>Primary key</comment>
            </column>
            <generator class="native" />
        </id>
        <version name="version" access="field">
            <column name="version">
                <comment>Optimistic lock version</comment>
            </column>
        </version>
        <property name="name">
            <column name="name" not-null="true">
                <comment>Type name</comment>
            </column>
        </property>
        <property name="code">
            <column name="code" not-null="true" unique="true">
                <comment>Type unique code</comment>
            </column>
        </property>
    </class>

</hibernate-mapping>
