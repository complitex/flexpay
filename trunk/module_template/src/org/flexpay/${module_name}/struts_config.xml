<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="
			  	org/flexpay/common/i18n/common-messages,
			  	org/flexpay/${module_name}/i18n/errors,
			  	org/flexpay/${module_name}/i18n/messages" />

	<package name="${module_name}" namespace="/${module_name}" extends="common">

		<action name="main" class="staticPageAction">
			<result type="tiles">${module_name}.main</result>
		</action>

	</package>

</struts>
