<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.orgs.persistence">

	<class name="PaymentsCollector" table="orgs_payments_collectors_tbl" optimistic-lock="version">
		<comment>Payment collectors</comment>
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<version name="version" access="field">
			<column name="version">
				<comment>Optimistic lock version</comment>
			</column>
		</version>
		<property name="status">
			<column name="status" not-null="true">
				<comment>Enabled/Disabled status</comment>
			</column>
		</property>
		<many-to-one name="organization" class="org.flexpay.orgs.persistence.Organization"
					 foreign-key="FK_orgs_payments_collectors_tbl_organization_id">
			<column name="organization_id" not-null="true">
				<comment>Organization reference</comment>
			</column>
		</many-to-one>
		<set name="descriptions" inverse="true" cascade="all-delete-orphan">
			<key column="collector_id" not-null="true" />
			<one-to-many class="org.flexpay.orgs.persistence.PaymentsCollectorDescription" />
		</set>
		<set name="paymentPoints" inverse="true" cascade="all-delete-orphan">
			<key column="collector_id" not-null="true" />
			<one-to-many class="PaymentPoint" />
		</set>
	</class>

	<class name="PaymentsCollectorDescription" table="orgs_payments_collectors_descriptions_tbl">
		<comment>Payment collector desriptions</comment>
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name">
			<column name="name" not-null="true">
				<comment>Description value</comment>
			</column>
		</property>
		<properties name="lang_service_provider_pair" unique="true">
			<many-to-one name="lang" foreign-key="FK_orgs_payments_collector_descriptions_tbl_language_id"
						 class="org.flexpay.common.persistence.Language">
				<column name="language_id" not-null="true">
					<comment>Language reference</comment>
				</column>
			</many-to-one>
			<many-to-one name="translatable" class="org.flexpay.orgs.persistence.PaymentsCollector"
						 foreign-key="FK_orgs_payments_collector_descriptions_tbl_collector_id">
				<column name="collector_id" not-null="true">
					<comment>Payment collector reference</comment>
				</column>
			</many-to-one>
		</properties>
	</class>

	<query name="PaymentsCollector.readFull">
		select distinct i
		from PaymentsCollector i
		    left outer join fetch i.descriptions
		    inner join fetch i.organization
		where i.id=?
	</query>

	<query name="PaymentsCollector.findInstances">
		select distinct i
		from PaymentsCollector i
    		left outer join fetch i.descriptions
	    	inner join fetch i.organization o
            left join fetch o.names
		where i.status=0
	</query>

	<query name="PaymentsCollector.findOrganizationInstances">
		from PaymentsCollector
		where status=0 and organization.id=?
	</query>

	<query name="PaymentsCollector.findInstancelessOrganizations">
		select distinct o
		from Organization o
		left join fetch o.names
		left join fetch o.descriptions
		left join o.paymentsCollectors i
		where o.status = 0 and o.id not in (select i1.organization.id from PaymentsCollector i1 where i1.status = 0) or i.id = ?
	</query>

</hibernate-mapping>
