<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="certificates" namespace="/admin" extends="common">

		<action name="certificatesList" class="certificatesListPageAction">
			<result type="tiles">admin.certificates.list</result>
		</action>

		<action name="certificatesListAjax" class="certificatesListAction">
			<result>/WEB-INF/jsp/admin/certificate/certificates_list.jsp</result>
		</action>

		<action name="certificateUpload" class="certificateUploadAction">
			<result name="input" type="tiles">admin.certificate.upload</result>
			<result name="redirectSuccess" type="redirect-action">certificatesList</result>
		</action>

		<action name="certificateEdit" class="certificateEditAction">
			<result name="input" type="tiles">admin.certificate.edit</result>
			<result name="redirectSuccess" type="redirect-action">certificatesList</result>
		</action>

		<action name="certificateDelete" class="certificateDeleteAction">
			<result>/WEB-INF/jsp/common/responses/simple_response.jsp</result>
		</action>
	</package>

</struts>