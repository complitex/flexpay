<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Not working, use for development only, -->
	<!--<import resource="/WEB-INF/spring/common/hibernate.xml" />-->

	<!-- Use for deployment -->
	<import resource="../common/hibernate.xml" />

	<!--  Dao Layer instances -->
	<bean id="countryDAO" parent="abstractDao">
		<property name="proxyInterfaces"
				  value="org.flexpay.ab.dao.CountryDao" />
		<property name="target">
			<bean parent="abstractDaoTarget">
				<constructor-arg value="org.flexpay.ab.persistence.Country" />
			</bean>
		</property>
	</bean>

	<bean id="countryNameDAO" parent="abstractDao">
		<property name="proxyInterfaces"
				  value="org.flexpay.ab.dao.CountryNameDao" />
		<property name="target">
			<bean parent="abstractDaoTarget">
				<constructor-arg value="org.flexpay.ab.persistence.CountryName" />
			</bean>
		</property>
	</bean>

	<bean id="townTypeDAO" parent="abstractDao">
		<property name="proxyInterfaces"
				  value="org.flexpay.ab.dao.TownTypeDao" />
		<property name="target">
			<bean parent="abstractDaoTarget">
				<constructor-arg value="org.flexpay.ab.persistence.TownType" />
			</bean>
		</property>
	</bean>

	<bean id="townTypeTranslationDao" parent="abstractDao">
		<property name="proxyInterfaces"
				  value="org.flexpay.ab.dao.TownTypeTranslationDao" />
		<property name="target">
			<bean parent="abstractDaoTarget">
				<constructor-arg value="org.flexpay.ab.persistence.TownTypeTranslation" />
			</bean>
		</property>
	</bean>

</beans>
