<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- import services definitions -->
	<import resource="beans-services.xml" />

	<!-- Define struts actions beans -->

	<!-- Countries -->
	<bean id="listCountriesAction" class="org.flexpay.ab.actions.CountriesList" scope="prototype">
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="createCountryAction" class="org.flexpay.ab.actions.CountryCreate" scope="prototype">
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="createRegionAction" class="org.flexpay.ab.actions.RegionCreate" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="editRegionAction" class="org.flexpay.ab.actions.RegionEdit" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="listRegionsAction" class="org.flexpay.ab.actions.RegionsList" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="deleteRegionsAction" class="org.flexpay.ab.actions.RegionsDelete" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<!-- Town types -->
	<bean id="listTownTypesAction" class="org.flexpay.ab.actions.TownTypesList" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>

	<bean id="createTownTypeAction" class="org.flexpay.ab.actions.TownTypeCreate" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>

	<bean id="editTownTypeAction" class="org.flexpay.ab.actions.TownTypeEdit" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>

	<bean id="deleteTownTypesAction" class="org.flexpay.ab.actions.TownTypesDelete" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>
	
	<!-- Street types -->
	<bean id="streetTypeListAction" class="org.flexpay.ab.actions.street_type.StreetTypeListAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeCreteAction" class="org.flexpay.ab.actions.street_type.StreetTypeCreateAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeViewAction" class="org.flexpay.ab.actions.street_type.StreetTypeViewAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeEditAction" class="org.flexpay.ab.actions.street_type.StreetTypeEditAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>

</beans>
