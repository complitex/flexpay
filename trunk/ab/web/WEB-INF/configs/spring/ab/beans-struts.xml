<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- import services definitions -->
	<import resource="beans-services.xml" />

	<!-- Define struts actions beans -->

	<!-- Countries -->
	<bean id="listCountriesAction" class="org.flexpay.ab.actions.CountriesList" scope="prototype">
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="createCountryAction" class="org.flexpay.ab.actions.CountryCreate" scope="prototype">
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="createRegionAction" 
		  class="org.flexpay.ab.actions.region.RegionCreate" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="viewRegionAction"
		  class="org.flexpay.ab.actions.region.RegionView" scope="prototype">
		<property name="regionService" ref="regionService" />
	</bean>

	<bean id="editRegionAction" class="org.flexpay.ab.actions.region.RegionEditSimple" scope="prototype">
		<property name="regionService" ref="regionService" />
	</bean>

	<bean id="listRegionsAction" class="org.flexpay.ab.actions.region.RegionsList" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<bean id="deleteRegionsAction" class="org.flexpay.ab.actions.region.RegionsDelete" scope="prototype">
		<property name="regionService" ref="regionService" />
		<property name="countryService" ref="countryService" />
	</bean>

	<!-- Town types -->
	<bean id="listTownTypesAction" class="org.flexpay.ab.actions.TownTypesList" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>

	<bean id="createTownTypeAction" class="org.flexpay.ab.actions.TownTypeCreate" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>

	<bean id="editTownTypeAction" class="org.flexpay.ab.actions.TownTypeEdit" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>

	<bean id="deleteTownTypesAction" class="org.flexpay.ab.actions.TownTypesDelete" scope="prototype">
		<property name="townTypeService" ref="townTypeService" />
	</bean>
	
	<!-- Street types -->
	<bean id="streetTypeListAction" class="org.flexpay.ab.actions.street.StreetTypeListAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeCreteAction" class="org.flexpay.ab.actions.street.StreetTypeCreateAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeViewAction" class="org.flexpay.ab.actions.street.StreetTypeViewAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeEditAction" class="org.flexpay.ab.actions.street.StreetTypeEditAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	<bean id="streetTypeDeleteAction" class="org.flexpay.ab.actions.street.StreetTypeDeleteAction" scope="prototype">
		<property name="streetTypeService" ref="streetTypeService" />
	</bean>
	
	<!-- Identity types -->
	<bean id="identityTypeListAction" class="org.flexpay.ab.actions.identity.IdentityTypeListAction" scope="prototype">
		<property name="identityTypeService" ref="identityTypeService" />
	</bean>
	<bean id="identityTypeCreteAction" class="org.flexpay.ab.actions.identity.IdentityTypeCreateAction" scope="prototype">
		<property name="identityTypeService" ref="identityTypeService" />
	</bean>
	<bean id="identityTypeViewAction" class="org.flexpay.ab.actions.identity.IdentityTypeViewAction" scope="prototype">
		<property name="identityTypeService" ref="identityTypeService" />
	</bean>
	<bean id="identityTypeEditAction" class="org.flexpay.ab.actions.identity.IdentityTypeEditAction" scope="prototype">
		<property name="identityTypeService" ref="identityTypeService" />
	</bean>
	<bean id="identityTypeDeleteAction" class="org.flexpay.ab.actions.identity.IdentityTypeDeleteAction" scope="prototype">
		<property name="identityTypeService" ref="identityTypeService" />
	</bean>

</beans>
