<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.ab.persistence">

	<class name="Region" table="regions_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="country" column="country_id" not-null="true" />
		<property name="status" not-null="true" />
		<set name="names" inverse="true" lazy="false">
			<key column="region_id" not-null="true" />
			<one-to-many class="RegionName" />
		</set>
	</class>

	<class name="RegionName" table="region_names_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="region" column="region_id" not-null="true" />
		<property name="begin" column="begin_date" type="date" />
		<property name="end" column="end_date" type="date" />
		<set name="translations" inverse="true" lazy="false">
			<key column="region_name_id" />
			<one-to-many class="RegionNameTranslation" />
		</set>
	</class>

	<class name="RegionNameTranslation" table="region_name_translations_tbl"
		   optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name" />
		<properties name="lang_region_name_pair" unique="true">
			<many-to-one name="regionName" column="region_name_id" lazy="false"
						 fetch="join" not-null="true" class="RegionName" />
			<many-to-one name="lang" column="language_id" lazy="false" fetch="join"
						 not-null="true"
						 class="org.flexpay.common.persistence.Language" />
		</properties>
	</class>

	<query name="Region.listRegions">
		from Region r where r.status=? and r.country.id=?
	</query>

	<query name="Region.listRegions.count">
		select count(*) from Region r where r.status=? and r.country.id=?
	</query>

</hibernate-mapping>
