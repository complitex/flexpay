<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages" />

	<package name="ab" namespace="/ab" extends="common">

		<action name="main">
			<!-- 
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">developerRole</param>
			</interceptor-ref> -->
			<result type="tiles">ab.main</result>
		</action>

	</package>

	<package name="countries" namespace="/dicts" extends="common">

		<action name="countriesList" class="countriesListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">COUNTRY_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.country.list</result>
		</action>

		<action name="countryCreate" class="countryCreateAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">COUNTRY_ADD</param>
			</interceptor-ref>
			<result type="redirect">countriesList.action</result>
			<result type="tiles" name="input">ab.country.create</result>
		</action>

	</package>

	<package name="regions" namespace="/dicts" extends="common">

		<action name="regionsList" class="regionsListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">REGION_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.regions.list</result>
		</action>

		<action name="regionCreate" class="regionCreateAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">REGION_ADD</param>
			</interceptor-ref>
			<result type="redirect-action">
				<param name="actionName">regionView</param>
				<param name="parse">true</param>
				<param name="object.id">${object.id}</param>
			</result>
			<result type="tiles" name="input">ab.region.create</result>
		</action>

		<action name="regionView" class="regionViewAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">REGION_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.region.view</result>
			<result type="redirect-action" name="redirectError">regionsList</result>
		</action>

		<action name="regionEdit" class="regionEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">REGION_CHANGE</param>
			</interceptor-ref>
			<result type="redirect-action">
				<param name="actionName">regionView</param>
				<param name="parse">true</param>
				<param name="object.id">${object.id}</param>
			</result>
			<result type="tiles" name="input">ab.region.edit</result>
		</action>

		<action name="regionDelete" class="regionDeleteAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">REGION_DELETE</param>
			</interceptor-ref>
			<result name="redirectSuccess" type="redirect">regionsList.action</result>
		</action>

	</package>

	<package name="identity_types" namespace="/dicts" extends="common">

		<action name="identityTypeCreate" class="identityTypeCreateAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">IDENTITY_TYPE_ADD</param>
			</interceptor-ref>
			<result name="form" type="tiles">ab.identity_type.create</result>
			<result name="afterSubmit" type="redirect">identityTypesList.action</result>
		</action>

		<action name="identityTypeView" class="identityTypeViewAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">IDENTITY_TYPE_READ</param>
			</interceptor-ref>
			<result name="success" type="tiles">ab.identity_type.view</result>
		</action>

		<action name="identityTypesList" class="identityTypesListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">IDENTITY_TYPE_READ</param>
			</interceptor-ref>
			<result name="success" type="tiles">ab.identity_type.list</result>
		</action>

		<action name="identityTypeEdit" class="identityTypeEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">IDENTITY_TYPE_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.identity_type.edit</result>
			<result name="redirectSuccess" type="redirect">identityTypesList.action</result>
		</action>

		<action name="identityTypeDelete" class="identityTypeDeleteAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">IDENTITY_TYPE_DELETE</param>
			</interceptor-ref>
			<result name="afterSubmit" type="redirect">identityTypesList.action</result>
		</action>

	</package>

	<include file="org/flexpay/ab/actions/person/struts.xml" />
	<include file="org/flexpay/ab/actions/town/struts.xml" />
	<include file="org/flexpay/ab/actions/street/struts.xml" />
	<include file="org/flexpay/ab/actions/district/struts.xml" />
	<include file="org/flexpay/ab/actions/buildings/struts.xml" />
	<include file="org/flexpay/ab/actions/apartment/struts.xml" />
	<include file="org/flexpay/ab/actions/measureunit/struts.xml" />

</struts>
