<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="streets" namespace="/dicts" extends="common">

		<action name="streetsList" class="streetsListPageAction">
			<result name="success" type="tiles">ab.streets.list</result>
		</action>

		<action name="streetView" class="streetViewAction">
			<result type="tiles">ab.street.view</result>
			<result type="redirect" name="redirectError">streetsList.action</result>
		</action>

		<action name="streetEdit" class="streetEditAction">
            <result name="redirectSuccess" type="redirect-action">
                <param name="actionName">streetView</param>
                <param name="parse">true</param>
                <param name="object.id">${street.id}</param>
            </result>
			<result type="tiles" name="input">ab.street.edit</result>
		</action>

		<action name="streetDelete" class="streetDeleteAction">
			<result name="redirectSuccess" type="redirect">streetsList.action</result>
		</action>

		<action name="streetDistrictEdit" class="streetDistrictEditAction">
			<result type="tiles" name="input">ab.street.edit.districts</result>
			<result type="redirect-action">
				<param name="actionName">streetView</param>
				<param name="parse">true</param>
				<param name="object.id">${street.id}</param>
			</result>
		</action>

	</package>

	<package name="street_types" namespace="/dicts" extends="common">

		<action name="streetTypeView" class="streetTypeViewAction">
			<result name="success" type="tiles">ab.street_type.view</result>
		</action>

		<action name="streetTypesList" class="streetTypesListAction">
			<result name="success" type="tiles">ab.street_type.list</result>
		</action>

		<action name="editStreetType" class="streetTypeEditAction">
			<result name="input" type="tiles">ab.street_type.edit</result>
			<result name="redirectSuccess" type="redirect-action">streetTypesList</result>
		</action>

		<action name="streetTypeDelete" class="streetTypeDeleteAction">
			<result name="afterSubmit" type="redirect">streetTypesList.action</result>
		</action>

	</package>
	
</struts>
