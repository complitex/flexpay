<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="buildings" namespace="/dicts" extends="common">

		<action name="list_buildings" class="listBuildings">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_READ</param>
			</interceptor-ref>
			<result type="tiles">ab.building.list</result>
		</action>

		<action name="buildingsCreate" class="buildingsCreateAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_ADD</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.buildings.create</result>
			<result name="redirectSuccess" type="redirect-action">list_buildings</result>
			<result name="edit" type="redirect-action">
				<param name="actionName">buildingsEdit</param>
				<param name="parse">true</param>
				<param name="buildings.id">${buildings.id}</param>
			</result>
		</action>

		<action name="buildingsEdit" class="buildingsEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.buildings.edit</result>
			<result name="redirectSuccess" type="redirect-action">list_buildings</result>
		</action>

		<action name="buildingsDelete" class="buildingsDeleteAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_DELETE</param>
			</interceptor-ref>
			<result name="redirectSuccess" type="redirect-action">list_buildings</result>
			<result name="redirectInput" type="redirect-action">
				<param name="actionName">buildingsEdit</param>
				<param name="parse">true</param>
				<param name="buildings.id">${redirectBuildingsId}</param>
			</result>
		</action>

		<action name="buildingsSetPrimaryStatus" class="buildingsSetPrimaryStatusAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_CHANGE</param>
			</interceptor-ref>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">buildingsEdit</param>
				<param name="parse">true</param>
				<param name="buildings.id">${redirectBuildingsId!=null ? redirectBuildingsId : buildings.id}</param>
			</result>
		</action>

		<action name="buildingAttributeTypeList" class="buildingAttributeTypeListAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_ATTRIBUTE_TYPE_READ</param>
			</interceptor-ref>
			<result name="success" type="tiles">ab.buildings.attribute_types.list</result>
		</action>

		<action name="buildingAttributeTypeCreate" class="buildingAttributeTypeCreateAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_ATTRIBUTE_TYPE_ADD</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.buildings.attribute_types.create</result>
			<result name="redirectSuccess" type="redirect-action">buildingAttributeTypeList</result>
		</action>

		<action name="buildingAttributeTypeEdit" class="buildingAttributeTypeEditAction">
			<interceptor-ref name="commonDefaultStack">
				<param name="flexpayRoles.allowedRoles">BUILDING_ATTRIBUTE_TYPE_CHANGE</param>
			</interceptor-ref>
			<result name="input" type="tiles">ab.buildings.attribute_types.edit</result>
			<result name="redirectSuccess" type="redirect-action">buildingAttributeTypeList</result>
		</action>

	</package>

</struts>
