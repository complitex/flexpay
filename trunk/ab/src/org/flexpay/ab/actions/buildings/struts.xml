<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="buildings" namespace="/dicts" extends="common">

		<action name="buildingsList" class="buildingsListPageAction">
			<result type="tiles">ab.building.list</result>
		</action>

		<action name="buildingCreate" class="buildingCreateAction">
			<result name="input" type="tiles">ab.buildings.create</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">buildingView</param>
				<param name="parse">true</param>
				<param name="building.id">${building.id}</param>
			</result>
		</action>

		<action name="editBuildingAddress" class="editBuildingAddressAction">
			<result name="input" type="tiles">ab.buildings.edit_address</result>
			<result name="redirectError" type="redirect-action">buildingsList</result>
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">buildingView</param>
				<param name="parse">true</param>
				<param name="building.id">${building.id}</param>
			</result>
		</action>

		<action name="buildingView" class="buildingViewAction">
			<result name="success" type="tiles">ab.building.view</result>
			<result name="redirectSuccess" type="redirect-action">buildingsList</result>
		</action>

		<action name="buildingDelete" class="buildingDeleteAction">
			<result name="redirectSuccess" type="redirect-action">buildingsList</result>
			<result name="redirectInput" type="redirect-action">
				<param name="actionName">buildingView</param>
				<param name="parse">true</param>
				<param name="building.id">${redirectBuildingsId}</param>
			</result>
		</action>

		<action name="buildingSetPrimaryStatus" class="buildingSetPrimaryStatusAction">
			<result name="redirectSuccess" type="redirect-action">
				<param name="actionName">buildingView</param>
				<param name="parse">true</param>
				<param name="building.id">${redirectBuildingsId!=null ? redirectBuildingsId : buildings.id}</param>
			</result>
		</action>

		<action name="addressAttributeTypesList" class="addressAttributeTypesListAction">
			<result name="success" type="tiles">ab.buildings.attribute_types.list</result>
		</action>

		<action name="addressAttributeTypeEdit" class="addressAttributeTypeEditAction">
			<result name="input" type="tiles">ab.buildings.attribute_types.edit</result>
			<result name="redirectSuccess" type="redirect-action">addressAttributeTypesList</result>
		</action>

	</package>

</struts>
