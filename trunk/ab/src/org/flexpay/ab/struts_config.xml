<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,
			  org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages" />

	<package name="ab" namespace="/ab" extends="common">

		<action name="main" class="menuPageAction">
			<result type="tiles">ab.main</result>
		</action>

        <action name="mainDicts" class="menuPageAction">
            <result type="tiles">ab.main.dicts</result>
        </action>

	</package>

    <package name="dicts" namespace="/dicts" extends="common">

        <action name="mainAddressDicts" class="menuPageAction">
            <result type="tiles">ab.main.address_dicts</result>
        </action>

        <action name="mainPersonDicts" class="menuPageAction">
            <result type="tiles">ab.main.person_dicts</result>
        </action>

        <action name="mainTypeDicts" class="menuPageAction">
            <result type="tiles">ab.main.type_dicts</result>
        </action>

        <action name="mainOtherDicts" class="menuPageAction">
            <result type="tiles">ab.main.other_dicts</result>
        </action>

    </package>

	<include file="org/flexpay/common/actions/struts_config.xml" />
	<include file="org/flexpay/ab/actions/person/struts.xml" />
	<include file="org/flexpay/ab/actions/identity/struts.xml" />
    <include file="org/flexpay/ab/actions/country/struts.xml" />
    <include file="org/flexpay/ab/actions/region/struts.xml" />
	<include file="org/flexpay/ab/actions/town/struts.xml" />
	<include file="org/flexpay/ab/actions/street/struts.xml" />
	<include file="org/flexpay/ab/actions/district/struts.xml" />
	<include file="org/flexpay/ab/actions/buildings/struts.xml" />
	<include file="org/flexpay/ab/actions/apartment/struts.xml" />
	<include file="org/flexpay/ab/actions/measureunit/struts.xml" />
    <include file="org/flexpay/ab/actions/filters/struts.xml" />

</struts>
