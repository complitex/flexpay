<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean name="fpDisplayerMapping" class="net.sf.navigator.displayer.MenuDisplayerMapping"
            p:type="net.sf.navigator.displayer.FPMenuDisplayer"
            />

    <!--level0-->
    <bean name="fpMenu" class="net.sf.navigator.menu.MenuComponent"
            p:name="fp"
            p:userRole="ROLE_BASIC"
            />

    <bean name="menuRepository" class="net.sf.navigator.menu.MenuRepository">
        <property name="menu" ref="fpMenu" />
        <property name="displayers">
            <map>
                <entry key="fpDisplayer" value-ref="fpDisplayerMapping" />
            </map>
        </property>
    </bean>

</beans>
