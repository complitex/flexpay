<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
		"http://struts.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>



    <definition name="common.layout.simple" template="/WEB-INF/jsp/common/layouts/simple.jsp">
        <put-attribute name="title" value="Flexpay common" />
        <put-attribute name="header" value="/WEB-INF/jsp/common/header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/jsp/common/footer.jsp" />
	</definition>

    <definition name="common.login" extends="common.layout.simple">
		<put-attribute name="body" value="/WEB-INF/jsp/common/login.jsp" />
	</definition>

    <definition name="common.forbidden" extends="common.layout.simple">
		<put-attribute name="body" value="/WEB-INF/jsp/common/forbidden.jsp" />
	</definition>

    <definition name="common.welcome" extends="common.layout.simple">
		<put-attribute name="body" value="/WEB-INF/jsp/common/welcome.jsp" />
	</definition>




    <definition name="page" template="/WEB-INF/jsp/include/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/include/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/jsp/include/menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/include/footer.jsp" />
	</definition>

	<definition name="root" extends="page">
		<put-attribute name="content" value="/WEB-INF/jsp/include/default_content.jsp" />
	</definition>
</tiles-definitions>
