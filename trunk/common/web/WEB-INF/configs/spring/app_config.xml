<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean class="org.flexpay.common.service.LanguageService" id="languageService" >
		<property name="languageDao" ref="languageDAO" />
	</bean>
	
	<!-- ConfigLoader is a subject to replace in dependent modules
	TODO: replace this ugly initialization with factories
	 -->
	<bean class="org.flexpay.common.util.config.CommonConfigLoader"
		  init-method="loadConfig" depends-on="languageDAO">
		<constructor-arg index="0" value="classpath:application_config.xml" />
		<property name="languageService" ref="languageService" />
	</bean>

</beans>
