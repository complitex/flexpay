<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="tc-buildingattributes" namespace="/tc" extends="common">

        <action name="buildingsList" class="buildingsListAction">
            <result type="tiles">tc.building_attributes.list</result>
        </action>

        <action name="buildingAttributesEdit" class="buildingAttributesEditAction">
            <result name="input" type="tiles">tc.building_attributes.edit</result>
            <result name="redirectSuccess" type="redirect-action">buildingsList</result>
        </action>

        <action name="uploadTCResults" class="uploadTCResultsAction">
            <result name="input" type="tiles">tc.building_attributes.upload</result>
            <result name="redirectSuccess" type="redirect-action">buildingsList</result>
        </action>

        <action name="tcResultsEdit" class="tcResultsEditAction">
            <result name="input" type="tiles">tc.building_attributes.edit</result>
            <result name="redirectSuccess" type="redirect-action">
                <param name="actionName">buildingAttributesEdit</param>
                <param name="parse">true</param>
                <param name="building.id">${buildingId}</param>
            </result>
        </action>
    </package>

</struts>