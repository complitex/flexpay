<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,
			         org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages,
			         org/flexpay/bti/i18n/errors,org/flexpay/bti/i18n/messages,
			         org/flexpay/tc/i18n/errors,org/flexpay/tc/i18n/messages" />

	<package name="tc" namespace="/tc" extends="common">

		<action name="main" class="staticPageAction">
			<result type="tiles">tc.dictionaries</result>
		</action>

        <action name="mainDicts" class="staticPageAction">
            <result type="tiles">tc.main.dicts</result>
        </action>

        <action name="mainImportExport" class="staticPageAction">
            <result type="tiles">tc.main.import_export</result>
        </action>

        <action name="mainData" class="staticPageAction">
            <result type="tiles">tc.main.data</result>
        </action>

        <action name="mainOtherDicts" class="staticPageAction">
            <result type="tiles">tc.main.other_dicts</result>
        </action>

        <action name="mainImportExport2" class="staticPageAction">
            <result type="tiles">tc.main.import_export2</result>
        </action>

        <action name="mainProcesses" class="staticPageAction">
            <result type="tiles">tc.main.processes</result>
        </action>

        <action name="mainData2" class="staticPageAction">
            <result type="tiles">tc.main.data2</result>
        </action>

		<action name="importexport" class="staticPageAction">
			<result type="tiles">tc.importexport</result>
		</action>

		<action name="data" class="staticPageAction">
			<result type="tiles">tc.data</result>
		</action>

	</package>

	<package name="building_attributes" namespace="/tc" extends="common">

		<action name="buildingAttributeTypesList" class="buildingAttributeTypesListAction">
			<result name="success" type="tiles">bti.buildings.attribute_types.list</result>
		</action>

		<action name="buildingAttributeTypeEdit" class="buildingAttributeTypeEditAction">
			<result name="input" type="tiles">bti.buildings.attribute_type.edit</result>
			<result name="redirectSuccess" type="redirect-action">buildingAttributeTypesList</result>
		</action>

		<action name="buildingAttributesImport" class="buildingAttributesImportAction">
			<result name="success" type="tiles">bti.buildings.attribute.import</result>
		</action>

	</package>

	<include file="org/flexpay/tc/actions/tariff/struts.xml" />
	<include file="org/flexpay/tc/actions/buildingattributes/struts.xml" />
	<include file="org/flexpay/tc/actions/tcresults/struts.xml" />
	<include file="org/flexpay/tc/actions/processing/struts.xml" />

</struts>
