<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages,org/flexpay/sz/i18n/errors,org/flexpay/sz/i18n/messages" />
			  
    <package name="sz" namespace="/sz" extends="common">

		<action name="main">
			<result type="tiles">sz.dictionaries</result>
		</action>
		<action name="import">
			<result type="tiles">sz.import</result>
		</action>
		<action name="processing">
			<result type="tiles">sz.processing</result>
		</action>
		
		<action name="doUpload" class="importFileAction">
            <result name="form" type="tiles">sz.import.file.upload.form</result>
        </action>
        
        <action name="importFileList" class="importFileListAction">
            <result name="success" type="tiles">sz.import_file.list</result>
        </action>
        
        <action name="loadSzFileToDb" class="loadSzFileToDbAction">
            <result name="success" type="redirect">importFileList.action</result>
        </action>
        
        <action name="loadSzFileFromDb" class="loadSzFileFromDbAction">
            <result name="success" type="redirect">importFileList.action</result>
        </action>
        
        <action name="downloadFile" method="downloadFile" class="org.flexpay.sz.actions.FileDownloadAction">
            <result type="stream">
              <param name="contentType">application/octet-stream</param>
              <param name="inputName">inputStream</param>
              <param name="bufferSize">1024</param>
              <param name="contentDisposition">filename="document.pdf"</param>
            
            </result>
        </action>
        
        

	</package>
	
</struts>