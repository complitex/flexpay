<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.custom.i18n.resources"
			  value="org/flexpay/common/i18n/common-messages,
                     org/flexpay/ab/i18n/errors,org/flexpay/ab/i18n/messages
			         org/flexpay/bti/i18n/errors,org/flexpay/bti/i18n/messages,
                     org/flexpay/eirc/i18n/errors,org/flexpay/eirc/i18n/messages
                     org/flexpay/sz/i18n/errors,org/flexpay/sz/i18n/messages" />

	<package name="sz" namespace="/sz" extends="common">

		<action name="main" class="staticPageAction">
			<result type="tiles">sz.dictionaries</result>
		</action>

		<action name="import" class="staticPageAction">
			<result type="tiles">sz.import</result>
		</action>

        <action name="doSzFileUploadAjax" class="szFileUploadAjaxAction">
            <result>/WEB-INF/jsp/sz/response.jsp</result>
            <result name="error">/WEB-INF/jsp/sz/response.jsp</result>
        </action>

		<action name="doUpload" class="importFileAction">
			<result name="oszn_absent" type="tiles">sz.import.file.upload.oszn_absent</result>
            <result name="input" type="tiles">sz.import.file.upload.form</result>
		</action>

		<action name="importFilesList" class="importFilesListAction">
			<result name="success" type="tiles">sz.import_file.list</result>
		</action>

		<action name="szFileOperation" class="szFileOperationAction">
			<result name="success" type="redirect-action">
                <param name="actionName">importFilesList.action</param>
                <param name="parse">true</param>
                <param name="pager.pageNumber">${pager.pageNumber}</param>
            </result>
		</action>

	</package>

</struts>
