<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.sz.persistence">

	<class name="SzFile" table="sz_files_tbl">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="oszn" class="Oszn" column="oszn_id" not-null="true" />
		<property name="requestFileName" column="request_file_name" not-null="true" />
		<property name="internalRequestFileName" column="internal_request_file_name" not-null="true" />
		<property name="internalResponseFileName" column="internal_response_file_name" />
		<many-to-one name="szFileType" class="SzFileType" column="sz_file_type_id" not-null="true" />
		<property name="fileYear" column="file_year" not-null="true" />
		<property name="fileMonth" column="file_month" not-null="true" />
		<property name="userName" column="user_name" not-null="true" />
		<property name="importDate" column="import_date" not-null="true" />
		<many-to-one name="szFileStatus" class="SzFileStatus" column="sz_file_status_id" not-null="true" />
		<many-to-one name="szFileActualityStatus" class="SzFileActualityStatus" column="sz_file_actuality_status_id" not-null="true" />
		
		
	</class>

    <query name="SzFile.readFull">
		select distinct s
		from SzFile s
			left join fetch s.oszn
			left join fetch s.szFileType
			left join fetch s.szFileStatus
			left join fetch s.szFileActualityStatus 
		WHERE s.id=?
	</query>

	<query name="SzFile.listSzFiles">
		select distinct s
		from SzFile s
			left outer join fetch s.oszn
			left outer join fetch s.szFileType
			left outer join fetch s.szFileStatus
			left outer join fetch s.szFileActualityStatus
			
	</query>
	
</hibernate-mapping>