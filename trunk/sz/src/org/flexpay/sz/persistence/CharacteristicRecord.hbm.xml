<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.sz.persistence">

	<class name="CharacteristicRecord" table="characteristic_records_tbl">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="szFile" column="sz_file_id" not-null="true" />
		<property name="cod" />
		<property name="cdpr" />
		<property name="ncard" />
		<property name="idcode" />
		<property name="pasp" />
		<property name="fio" />
		<property name="idpil" />
		<property name="pasppil" />
		<property name="fiopil" />
		<property name="idx" />
		<property name="cdul" />
		<property name="house" />
		<property name="build" />
		<property name="apt" />
		<property name="vl" />
		<property name="plzag" />
		<property name="plopal" />
	</class>
	
	<query name="CharacteristicRecord.findObjects">
		FROM CharacteristicRecord c
		WHERE c.szFile.id=?
	</query>
	
	<query name="CharacteristicRecord.findObjects.count">
		select count(*) from CharacteristicRecord c where c.szFile.id=?
	</query>
	
	<query name="CharacteristicRecord.deleteBySzFileId">
		delete from CharacteristicRecord c where c.szFile.id=?
	</query>

</hibernate-mapping>