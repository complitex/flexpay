<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.sz.persistence">

	<class name="SubsidyRecord" table="SubsReqvNach">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="szFile" column="sz_file_id" not-null="true" />

        <property name="surName"/>
        <property name="firstName"/>
        <property name="midName"/>
        <property name="indx"/>
        <property name="n_name"/>
        <property name="n_code"/>
        <property name="streetType"/>
        <property name="streetName"/>
        <property name="extStreetID"/>
        <property name="houseNum"/>
        <property name="partNum"/>
        <property name="appartment"/>
        <property name="account"/>
        <property name="app_num"/>
        <property name="begin"/>
        <property name="dat_end"/>
        <property name="cm_area"/>
        <property name="totalSq"/>
        <property name="blc_area"/>           
        <property name="frog"/>
        <property name="debt"/>
        <property name="living"/>
        <property name="nach"/>
        <property name="tarif"/>
        <property name="p2"/>
        <property name="n2"/>
        <property name="p3"/>
        <property name="n3"/>
        <property name="n4"/>
        <property name="p4"/>
        <property name="n5"/>
        <property name="p5"/>
        <property name="n6"/>
        <property name="p6"/>
        <property name="n7"/>
        <property name="p7"/>
        <property name="n8"/>
        <property name="p8"/>
        <property name="orgsID"/>
        <property name="fileID"/>
        <property name="status"/>
	</class>

	<query name="SubsidyRecord.findObjects">
		FROM SubsidyRecord c
		WHERE c.szFile.id=?
	</query>

	<query name="SubsidyRecord.findObjects.count">
		select count(*) from SubsidyRecord c where c.szFile.id=?
	</query>
	
	<query name="SubsidyRecord.deleteBySzFileId">
		delete from SubsidyRecord c where c.szFile.id=?
	</query>

</hibernate-mapping>