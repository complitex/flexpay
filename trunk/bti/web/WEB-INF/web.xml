<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		 version="2.5">
    <!--ab-->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>FlexPay BTI module</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>

	<!--
		- Location of the Log4J config file, for initialization and refresh checks.
		- Applied by Log4jConfigListener.
	-->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/common/configs/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>definitions-config</param-name>
		<param-value>/WEB-INF/common/configs/tiles_common.xml,/WEB-INF/ab/configs/tiles_ab.xml,/WEB-INF/common/configs/tiles_bti.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>actionFilter</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
        <init-param>
			<param-name>config</param-name>
			<param-value>struts-default.xml,struts-plugin.xml,org/flexpay/common/common_struts_config.xml,org/flexpay/ab/ab_struts_config.xml,org/flexpay/bti/bti_struts_config.xml</param-value>
		</init-param>
    </filter>
	<filter-mapping>
		<filter-name>actionFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
	</filter-mapping>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secure-resource</web-resource-name>
            <url-pattern>*.action</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>

    </security-constraint>


    <security-role>
        <role-name>BASIC_ROLE</role-name>
    </security-role>
	<!-- Country roles -->
    <security-role>
        <role-name>COUNTRY_READ</role-name>
    </security-role>
    <security-role>
        <role-name>COUNTRY_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>COUNTRY_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>COUNTRY_DELETE</role-name>
    </security-role>
    <!-- Region roles -->
    <security-role>
        <role-name>REGION_READ</role-name>
    </security-role>
    <security-role>
        <role-name>REGION_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>REGION_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>REGION_DELETE</role-name>
    </security-role>
    <!-- Town roles -->
    <security-role>
        <role-name>TOWN_READ</role-name>
    </security-role>
    <security-role>
        <role-name>TOWN_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>TOWN_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>TOWN_DELETE</role-name>
    </security-role>
    <!-- Town type roles -->
    <security-role>
        <role-name>TOWN_TYPE_READ</role-name>
    </security-role>
    <security-role>
        <role-name>TOWN_TYPE_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>TOWN_TYPE_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>TOWN_TYPE_DELETE</role-name>
    </security-role>
    <!-- District roles -->
    <security-role>
        <role-name>DISTRICT_READ</role-name>
    </security-role>
    <security-role>
        <role-name>DISTRICT_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>DISTRICT_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>DISTRICT_DELETE</role-name>
    </security-role>
    <!-- Street roles -->
    <security-role>
        <role-name>STREET_READ</role-name>
    </security-role>
    <security-role>
        <role-name>STREET_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>STREET_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>STREET_DELETE</role-name>
    </security-role>
    <!-- Street type roles -->
    <security-role>
        <role-name>STREET_TYPE_READ</role-name>
    </security-role>
    <security-role>
        <role-name>STREET_TYPE_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>STREET_TYPE_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>STREET_TYPE_DELETE</role-name>
    </security-role>
    <!-- Building attribute type roles -->
    <security-role>
        <role-name>BUILDING_ATTRIBUTE_TYPE_READ</role-name>
    </security-role>
    <security-role>
        <role-name>BUILDING_ATTRIBUTE_TYPE_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>BUILDING_ATTRIBUTE_TYPE_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>BUILDING_ATTRIBUTE_TYPE_DELETE</role-name>
    </security-role>
    <!-- Building roles -->
    <security-role>
        <role-name>BUILDING_READ</role-name>
    </security-role>
    <security-role>
        <role-name>BUILDING_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>BUILDING_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>BUILDING_DELETE</role-name>
    </security-role>
    <!-- Apartment roles -->
    <security-role>
        <role-name>APARTMENT_READ</role-name>
    </security-role>
    <security-role>
        <role-name>APARTMENT_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>APARTMENT_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>APARTMENT_DELETE</role-name>
    </security-role>
    <!-- Identity type roles -->
    <security-role>
        <role-name>IDENTITY_TYPE_READ</role-name>
    </security-role>
    <security-role>
        <role-name>IDENTITY_TYPE_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>IDENTITY_TYPE_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>IDENTITY_TYPE_DELETE</role-name>
    </security-role>
    <!-- Identity roles -->
    <security-role>
        <role-name>IDENTITY_READ</role-name>
    </security-role>
    <security-role>
        <role-name>IDENTITY_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>IDENTITY_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>IDENTITY_DELETE</role-name>
    </security-role>
    <!-- Person roles -->
    <security-role>
        <role-name>PERSON_READ</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_CHANGE</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_ADD</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_DELETE</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/resources/common/jsp/login.jsp</form-login-page>
            <form-error-page>/resources/common/jsp/login.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <welcome-file-list>
		<welcome-file>/bti_index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
