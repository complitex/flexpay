<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="staticPageAction" scope="prototype"
		  class="org.flexpay.common.actions.StaticPageAction" />

	<bean id="menuPageAction" scope="prototype"
		  class="org.flexpay.common.actions.MenuPageAction" />

	<bean id="printAction" scope="prototype"
		  class="org.flexpay.common.actions.FilePrintAction" />

	<!-- Locale setter bean -->
	<bean class="org.flexpay.common.util.config.auth.UpdateUserPreferencesApplicationListener"
		  p:preferencesService-ref="userPreferencesService" />

	<bean id="processesCleanupAction"
		  scope="prototype"
		  class="org.flexpay.common.actions.jbpm.ProcessesCleanupAction"
		  p:processManager-ref="processManager" />

</beans>
