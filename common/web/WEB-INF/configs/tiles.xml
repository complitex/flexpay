		"http://struts.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

	<definition name="page" template="/WEB-INF/jsp/include/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/include/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/jsp/include/menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/include/footer.jsp" />
	</definition>

	<definition name="root" extends="page">
		<put-attribute name="content" value="/WEB-INF/jsp/include/default_content.jsp" />
	</definition>
</tiles-definitions>
