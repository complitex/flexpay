<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.common.persistence">

	<class name="FlexPayFile" table="common_files_tbl" optimistic-lock="version">
		<id name="id" column="id">
			<generator class="native" />
		</id>
        <property name="originalName" column="original_name" not-null="true" />
        <property name="description" column="description" not-null="true" />
        <property name="creationDate" column="creation_date" not-null="true" />
		<property name="author" column="author_name" not-null="true" />
        <property name="size" column="size" />
        <property name="type" column="type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.flexpay.common.persistence.FlexPayFileType</param>
                <param name="type">5</param>
            </type>
        </property>
        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.flexpay.common.persistence.FlexPayFileStatus</param>
                <param name="type">5</param>
            </type>
        </property>
        <property name="module" column="module">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.flexpay.common.persistence.FlexPayModule</param>
                <param name="type">5</param>
            </type>
        </property>
	</class>

</hibernate-mapping>
