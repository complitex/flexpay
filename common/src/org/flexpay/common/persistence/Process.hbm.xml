<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.flexpay.common.persistence">


	<query name="WorkItemInfo.findAllWorkItems">
		select distinct workItem
		from org.drools.persistence.info.WorkItemInfo workItem
        order by workItem.id desc
	</query>

</hibernate-mapping>
