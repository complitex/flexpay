<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<constant name="struts.objectFactory" value="spring"/>
	<constant name="struts.devMode" value="true"/>
	<constant name="struts.custom.i18n.resources" value="/org/flexpay/common/i18n/common-messages"/>
	<constant name="struts.ui.theme" value="simple"/>
	<constant name="struts.multipart.maxSize" value="1073741824"/>

	<package name="common" namespace="/common" extends="tiles-default">

		<result-types>
			<result-type name="rawtext"
						 class="com.davidjc.ajaxfileupload.result.RawTextResult"/>
		</result-types>

		<interceptors>
			<interceptor name="userPreferences"
						 class="org.flexpay.common.actions.interceptor.UserPreferencesInterceptor" />
            <interceptor name="menuInterceptor"
                         class="org.flexpay.common.actions.interceptor.MenuInterceptor" />
			<interceptor-stack name="commonDefaultStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="userPreferences" />
                <interceptor-ref name="menuInterceptor" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="commonDefaultStack"/>

		<action name="fileUploadProgress"
				class="org.flexpay.common.actions.FileUploadProgressAction">
			<result name="success" type="rawtext"/>
		</action>

		<action name="welcome">
			<result type="tiles">common.welcome</result>
		</action>

	</package>

</struts>
