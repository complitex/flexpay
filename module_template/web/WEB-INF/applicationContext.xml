<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- ConfigLoader is a subject to replace in dependent modules -->
	<bean id="${module_name}ConfigLoader" class="org.flexpay.${module_name}.util.config.ConfigLoader"
		  init-method="loadConfig" depends-on="languageDao" >
		<constructor-arg index="0">
			<list>
				<value>classpath:org/flexpay/common/application_config.xml</value>
				<value>classpath:org/flexpay/common/application_config_test.xml</value>
				<value>classpath:org/flexpay/${module_name}/application_config.xml</value>
			</list>
		</constructor-arg>
		<property name="languageService" ref="languageService" />
	</bean>

    <import resource="common/configs/spring/config.xml" />
    <import resource="${module_name}/configs/spring/config.xml" />

</beans>
